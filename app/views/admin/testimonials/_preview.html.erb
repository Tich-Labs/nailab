<%# Admin testimonial preview: single-item scrollable stack %>
<% testimonials = local_assigns[:testimonials] || (defined?(@testimonials) ? @testimonials : []) %>
<div class="admin-preview-single" style="height:220px; overflow-y:auto;">
  <% Array(testimonials).each do |t| %>
    <div class="flex flex-col items-center justify-center h-56 border-b last:border-b-0 p-4 text-center">
      <% if t.photo_url.present? %>
        <img src="<%= t.photo_url %>" alt="<%= h(t.author_name) %>" class="rounded-full mb-2" style="max-height:80px;" />
      <% else %>
        <div class="text-gray-500 mb-2">No image</div>
      <% end %>
      <div class="font-semibold"><%= h(t.author_name) %></div>
      <div class="text-sm text-gray-700 mt-2"><%= h(t.quote) %></div>
    </div>
  <% end %>
</div>
