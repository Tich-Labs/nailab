<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <%= render 'welcome_banner' %>
  <!-- Quick Actions Row -->
  <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-12">
    <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white">Quick Actions</h2>
      <p class="text-purple-100 mt-1">Get started with your startup journey</p>
    </div>
    <div class="p-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Update Profile Card -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-200">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-teal-500 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-900 mb-2">Update Profile</h3>
              <p class="text-gray-600">Complete your startup details</p>
            </div>
          </div>
          <%= link_to 'Get Started', founder_startup_profile_path, class: "w-full inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-teal-700 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
        <!-- Track Progress Card -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-200">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-teal-500 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-900 mb-2">Track Progress</h3>
              <p class="text-gray-600">Monitor milestones & metrics</p>
            </div>
          </div>
          <%= link_to 'View Dashboard', founder_progress_path, class: "w-full inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-teal-700 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
        <!-- Find Mentors Card -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-200">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-teal-500 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-900 mb-2">Find Mentors</h3>
              <p class="text-gray-600">Connect with experts</p>
            </div>
          </div>
          <%= link_to 'Browse Mentors', founder_mentorship_path, class: "w-full inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-teal-700 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      </div>
    </div>
  </div>
  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
    <%= render 'startup_profile_summary' %>
    <%= render 'progress_charts' %>
  </div>
  <!-- Full Width Section -->
  <div class="mt-8">
    <%= render 'recommended_mentors' %>
  </div>
</div>