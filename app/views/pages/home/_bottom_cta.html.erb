<%# _bottom_cta.html.erb - BottomCTA (call to action) %>
<% cta = @bottom_cta_content %>
<section class="py-20 bg-nailab-teal">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl lg:text-5xl font-bold text-white mb-6"><%= cta[:heading] %></h2>
    <p class="text-xl text-white/90 mb-8"><%= cta[:body] %></p>
    <div class="flex flex-wrap justify-center gap-4">
      <% primary = cta[:primary_cta].presence || {} %>
      <% secondary = cta[:secondary_cta].presence || {} %>
      <%= link_to primary[:label] || 'Browse Programs', primary[:link] || programs_path, class: 'inline-flex items-center justify-center px-8 py-4 bg-white text-nailab-teal text-lg font-semibold rounded-xl shadow-lg hover:bg-teal-50 transition-all' %>
      <%= link_to secondary[:label] || 'Find a Mentor', secondary[:link] || '/mentors', class: 'inline-flex items-center justify-center px-8 py-4 border border-white text-white text-lg font-semibold rounded-xl hover:bg-white/10 transition-all' %>
    </div>
  </div>
</section>
