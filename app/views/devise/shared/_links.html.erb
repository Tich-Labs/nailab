<div class="mt-6 grid gap-2 text-sm">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-slate-600 hover:text-purple-600" %>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-slate-600 hover:text-purple-600" %>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-slate-600 hover:text-purple-600" %>
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-slate-600 hover:text-purple-600" %>
  <% end %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-slate-600 hover:text-purple-600" %>
  <% end %>
  <%- if devise_mapping.omniauthable? %>
    <div class="space-y-2">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%- next if provider == :linkedin %> <!-- Temporarily disabled -->
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full rounded-2xl bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-200" %>
      <% end %>
    </div>
  <% end %>
</div>
