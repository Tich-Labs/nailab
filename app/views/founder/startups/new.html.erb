<%# app/views/founder/startups/new.html.erb %>
<div class="max-w-2xl mx-auto mt-10 bg-white rounded-lg shadow p-6">
  <h2 class="text-2xl font-semibold mb-4">Add an Additional Startup</h2>
  <%= form_with model: @startup, url: founder_startups_path, local: true, html: { multipart: true } do |f| %>
    <div class="grid grid-cols-1 gap-4">
      <div>
        <%= f.label :startup_name, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :startup_name, class: 'input input-bordered w-full' %>
      </div>
      <div>
        <%= f.label :website_url, 'Website', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.url_field :website_url, class: 'input input-bordered w-full' %>
      </div>
      <div>
        <%= f.label :description, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_area :description, rows: 4, class: 'textarea textarea-bordered w-full' %>
      </div>
      <div>
        <%= f.label :team_size, 'Team size', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.number_field :team_size, min: 1, class: 'input input-bordered w-full' %>
      </div>
    </div>
    <div class="mt-6 flex justify-end gap-3">
      <%= link_to 'Cancel', founder_startup_profile_path, class: 'btn btn-ghost' %>
      <%= f.submit 'Add Startup', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
