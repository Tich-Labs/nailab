<%# _hero.html.erb - Hero (landing section) %>
<% secondary_cta = @hero_secondary_cta || { 'label' => 'Find a mentor', 'link' => '/mentors' } %>
<section class="relative overflow-hidden" data-controller="hero">
  <div class="relative h-[600px] lg:h-[700px]">
    <% @hero_slides.each_with_index do |slide, index| %>
      <div
        data-hero-target="slide"
        data-hero-index="<%= index %>"
        class="absolute inset-0 opacity-0 pointer-events-none"
      >
        <div class="absolute inset-0">
          <img
            src="<%= slide.image_url %>"
            alt="<%= slide.title.presence || 'Nailab Hero' %>"
            class="w-full h-full object-cover"
          />
          <div class="hero-overlay absolute inset-0"></div>
        </div>
        <div class="relative h-full flex items-center">
          <div class="max-w-3xl px-6 lg:px-8">
            <p class="text-sm uppercase tracking-[0.4em] text-white/70 mb-4"><%= @hero_badge %></p>
            <h1 class="text-4xl lg:text-6xl font-bold text-white leading-tight mb-6"><%= slide.title %></h1>
            <p class="text-xl lg:text-2xl text-white/80 max-w-xl leading-relaxed mb-8">
              <%= slide.subtitle %>
            </p>
            <div class="flex flex-wrap gap-4">
              <%= link_to slide.cta_text.presence || 'Learn more', slide.cta_link.presence || programs_path, class: 'inline-flex items-center justify-center px-8 py-4 bg-teal-600 text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-teal-700 transition-all' %>
              <%= link_to secondary_cta[:label], secondary_cta[:link], class: 'inline-flex items-center justify-center px-8 py-4 border border-white text-white text-lg font-semibold rounded-xl hover:bg-white/10 transition-all' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <button
    type="button"
    class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 text-white p-3 rounded-full transition-all"
    data-action="click->hero#previous"
    aria-label="Previous slide"
    >
    ←
  </button>
  <button
    type="button"
    class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 text-white p-3 rounded-full transition-all"
    data-action="click->hero#next"
    aria-label="Next slide"
    >
    →
  </button>
</section>
