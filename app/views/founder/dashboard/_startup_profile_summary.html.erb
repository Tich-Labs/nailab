<div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
  <div class="card-body">
    <div class="flex items-center justify-between mb-3">
      <h2 class="card-title text-xl text-nailab-purple">Startup Profile</h2>
      <div class="mask mask-squircle w-10 h-10 bg-nailab-teal/10 flex items-center justify-center">
        <svg class="w-5 h-5 text-nailab-teal" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
    </div>
    <div class="divider my-2"></div>
    <div class="space-y-2">
      <div class="flex justify-between items-center">
        <span class="text-xs font-medium text-base-content/70">Name</span>
        <span class="badge badge-outline badge-sm"><%= @startup_profile&.startup_name || 'Not set' %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-xs font-medium text-base-content/70">Stage</span>
        <span class="badge badge-primary badge-sm"><%= @startup_profile&.stage || 'Not set' %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-xs font-medium text-base-content/70">Industry</span>
        <span class="badge badge-secondary badge-sm"><%= @startup_profile&.sector || 'Not set' %></span>
      </div>
    </div>
    <div class="card-actions justify-end mt-4">
      <%= link_to founder_startup_profile_path, class: 'btn btn-xs btn-outline' do %>
