<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @programs.empty? %>
      <div class="text-center py-12">
        <p class="text-xl text-gray-600">
          No programs found in this category.
        </p>
      </div>
    <% else %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @programs.each do |program| %>
          <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1">
            <div class="relative h-48 overflow-hidden">
              <img
                src="<%= program.cover_image_url.presence || 'https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?w=1200' %>"
                alt="<%= program.title %>"
                class="w-full h-full object-cover"
              />
              <div class="absolute top-4 left-4">
                <span class="inline-block px-4 py-1 bg-teal-600 text-white text-sm font-semibold rounded-full shadow-lg">
                  <%= program.category %>
                </span>
              </div>
            </div>
            <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                <%= program.title %>
              </h3>
              <p class="text-gray-700 leading-relaxed mb-6">
                <%= program.description %>
              </p>
              <%= link_to program_detail_path(program.slug), class: 'inline-flex items-center space-x-2 text-teal-600 font-semibold hover:text-teal-700 transition-colors group' do %>
                <span>Learn more</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7"/></svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
