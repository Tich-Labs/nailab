<%= form_with(model: template_guide, class: "contents") do |form| %>
  <% if template_guide.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(template_guide.errors.count, "error") %> prohibited this template_guide from being saved:</h2>
      <ul class="list-disc ml-6">
        <% template_guide.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": template_guide.errors[:title].none?, "border-red-400 focus:outline-red-600": template_guide.errors[:title].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :category %>
    <%= form.text_field :category, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": template_guide.errors[:category].none?, "border-red-400 focus:outline-red-600": template_guide.errors[:category].any?}] %>
  </div>
  <div>
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
