<%# app/views/shared/_mentor_sidebar.html.erb %>
<aside class="hidden md:block w-64 h-full bg-white border-r shadow-sm fixed top-0 left-0 z-40">
  <div class="flex flex-col h-full">
    <!-- Logo -->
    <div class="flex items-center justify-center h-16 px-4 border-b border-gray-200">
      <%= link_to root_path, class: "flex items-center" do %>
        <%= image_tag "logo-blue.original.png", alt: "Nailab", class: "h-7 w-auto" %>
      <% end %>
    </div>
    <!-- Navigation -->
    <nav class="flex-1 py-8 px-4 space-y-6 overflow-y-auto">
      <!-- DASHBOARD -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Dashboard</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Overview', mentor_root_path, class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(mentor_root_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- MENTORSHIP -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Mentorship</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Messages', mentor_conversations_path, class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?('/mentor/messages') ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= link_to 'My Schedule', mentor_schedule_path, class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(mentor_schedule_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- STARTUPS -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Startups</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'My Startups', mentor_startups_path, class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?(mentor_startups_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- PROFILE -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Profile</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Profile', mentor_profile_path, class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?(mentor_profile_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- SETTINGS -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Settings</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Settings', mentor_settings_path, class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(mentor_settings_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= link_to 'Support', mentor_support_path, class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(mentor_support_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "w-full text-left px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</aside>