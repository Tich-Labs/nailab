<h1 class="text-2xl font-bold mb-4">Logos</h1>

<%= link_to "Upload new logo", new_admin_logo_path, class: "btn btn-primary mb-4" %>

<div class="grid grid-cols-3 gap-4">
  <% @logos.each do |logo| %>
    <div class="p-4 bg-white rounded shadow">
      <% if logo.image.attached? %>
        <%= image_tag url_for(logo.image.variant(resize_to_limit: [300, 150])), alt: logo.name, class: "mx-auto" %>
      <% else %>
        <p class="text-gray-500">No image</p>
      <% end %>
      <p class="mt-2"><strong><%= logo.name.presence || "Untitled" %></strong></p>
      <p class="text-sm text-gray-500">Order: <%= logo.display_order %></p>
      <div class="mt-2">
        <%= button_to "Delete", admin_logo_path(logo), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
