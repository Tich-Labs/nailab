<div class="mt-6 pt-6 border-t border-base-300">
  <div class="flex flex-col sm:flex-row gap-4">
    <% if @program.status != 'completed' && @program.status != 'complete' %>
      <%= link_to contact_path, class: 'btn btn-lg rounded-lg bg-nailab-teal text-white hover:bg-nailab-teal/90 border-nailab-teal' do %>
        Apply Now
      <% end %>
    <% end %>
    <%= link_to programs_path, class: 'btn btn-lg rounded-lg bg-white text-nailab-purple border-2 border-nailab-teal hover:bg-gray-50' do %>
      View All Programs
    <% end %>
  </div>
</div>
