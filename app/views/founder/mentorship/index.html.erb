<%# app/views/founder/mentorship/index.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Mentorship</h1>
    <p class="text-xl text-gray-600">Connect with experienced mentors to accelerate your startup journey</p>
  </div>
  <!-- Mentorship Request Modal -->
  <% if @selected_mentor %>
    <div id="mentorship-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" style="display: block;">
      <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
        <div class="mt-3">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Request Mentorship Session</h3>
            <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <div class="mb-4 p-4 bg-gradient-to-r from-purple-50 to-teal-50 rounded-lg">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-gradient-to-r from-purple-600 to-teal-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold"><%= @selected_mentor.name.first %></span>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900"><%= @selected_mentor.name %></h4>
                <p class="text-sm text-gray-600"><%= @selected_mentor.expertise %></p>
              </div>
            </div>
          </div>
          <%= form_with model: @mentorship_request, url: founder_mentorship_requests_path, method: :post, local: true, class: "space-y-4" do |form| %>
            <%= form.hidden_field :mentor_id, value: @selected_mentor.id %>
            <div>
              <%= form.label :message, "Tell us about your startup and what you'd like to discuss", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_area :message, placeholder: "Describe your current challenges, goals, and what specific help you're looking for from this mentor...", rows: 6, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            </div>
            <div class="flex justify-end space-x-3">
              <%= link_to 'Cancel', founder_mentorship_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-semibold" %>
              <%= form.submit 'Send Request', class: "px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-semibold" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <!-- Available Mentors -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
        <h2 class="text-2xl font-bold text-white">Available Mentors</h2>
      </div>
      <div class="p-8">
        <div class="space-y-6">
          <% @mentors.each do |mentor| %>
            <div class="flex items-center justify-between p-6 bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl hover:from-purple-100 hover:to-teal-100 transition-all">
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-gradient-to-r from-purple-600 to-teal-600 rounded-full flex items-center justify-center">
                  <span class="text-white font-bold text-xl"><%= mentor.name.first %></span>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900"><%= mentor.name %></h3>
                  <p class="text-gray-600"><%= mentor.expertise&.join(', ') || 'No specialties listed' %></p>
                  <% if mentor.company.present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
                      <%= mentor.company %>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="flex space-x-3">
                <%= link_to 'View Profile', founder_mentor_path(mentor), class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-semibold rounded-lg hover:bg-purple-700 transition-all" %>
                <%= link_to 'Request Session', new_founder_mentorship_request_path(mentor_id: mentor.id), class: "inline-flex items-center px-4 py-2 bg-teal-600 text-white text-sm font-semibold rounded-lg hover:bg-teal-700 transition-all" %>
              </div>
            </div>
          <% end %>
        </div>
        <% if @mentors.empty? %>
          <div class="text-center py-12">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No mentors available</h3>
            <p class="text-gray-600">We're working on expanding our mentor network. Check back soon!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- My Requests & Sessions -->
  <div class="space-y-8">
    <!-- My Requests -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-teal-600 to-purple-600 px-8 py-6">
        <h3 class="text-2xl font-bold text-white">My Requests</h3>
      </div>
      <div class="p-8">
        <div class="space-y-4">
          <% @mentorship_requests.each do |request| %>
            <div class="p-4 bg-gradient-to-r from-teal-50 to-purple-50 rounded-xl">
              <p class="font-semibold text-gray-900"><%= request.mentor&.name || 'Unknown Mentor' %></p>
              <p class="text-sm text-gray-600"><%= request.status.titleize %></p>
            </div>
          <% end %>
          <% if @mentorship_requests.empty? %>
            <div class="text-center py-8">
              <div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <p class="text-gray-600 text-sm">No requests yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Upcoming Sessions -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
        <h3 class="text-2xl font-bold text-white">Upcoming Sessions</h3>
      </div>
      <div class="p-8">
        <div class="space-y-4">
          <% @sessions.each do |session| %>
            <div class="p-4 bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl">
              <p class="font-semibold text-gray-900"><%= session.mentor.name %></p>
              <p class="text-sm text-gray-600 mb-3"><%= session.scheduled_at.strftime('%B %d, %Y at %I:%M %p') %></p>
              <%= link_to 'Join Session', founder_session_path(session), class: "inline-flex items-center px-4 py-2 bg-teal-600 text-white text-sm font-semibold rounded-lg hover:bg-teal-700 transition-all" %>
            </div>
          <% end %>
          <% if @sessions.empty? %>
            <div class="text-center py-8">
              <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <p class="text-gray-600 text-sm">No upcoming sessions.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function closeModal() {
    window.location.href = '<%= founder_mentorship_path %>';
  }
</script>