<%# app/views/founder/support_tickets/show.html.erb %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <%= link_to "â† Back to Support", founder_support_path, class: "inline-flex items-center text-purple-600 hover:text-purple-800 mb-4" %>
    <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @ticket.subject %></h1>
    <div class="flex items-center space-x-4 text-sm text-gray-600">
      <span>Category: <%= @ticket.category %></span>
      <span>Status:
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= case @ticket.status when 'open' then 'bg-yellow-100 text-yellow-800' when 'in_progress' then 'bg-blue-100 text-blue-800' when 'resolved' then 'bg-green-100 text-green-800' when 'closed' then 'bg-gray-100 text-gray-800' else '' end %>">
          <%= @ticket.status.humanize %>
        </span>
      </span>
      <span>Created: <%= @ticket.created_at.strftime('%b %d, %Y at %I:%M %p') %></span>
    </div>
  </div>

  <!-- Conversation Thread -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
    <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white">Conversation</h2>
    </div>
    <div class="p-8">
      <div class="space-y-6">
        <!-- Initial ticket description -->
        <div class="flex justify-start">
          <div class="bg-gray-100 rounded-lg p-4 max-w-3xl">
            <div class="flex items-center space-x-2 mb-2">
              <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-purple-600">You</span>
              </div>
              <div class="text-sm text-gray-600">
                <strong><%= current_user.full_name %></strong> - <%= @ticket.created_at.strftime('%b %d, %Y at %I:%M %p') %>
              </div>
            </div>
            <div class="text-gray-900 whitespace-pre-wrap"><%= @ticket.description %></div>
          </div>
        </div>

        <!-- Replies -->
        <% @ticket.replies.order(:created_at).each do |reply| %>
        <div class="flex <%= reply.admin_reply? ? 'justify-end' : 'justify-start' %>">
          <div class="rounded-lg p-4 max-w-3xl <%= reply.admin_reply? ? 'bg-teal-100' : 'bg-gray-100' %>">
            <div class="flex items-center space-x-2 mb-2">
              <div class="w-8 h-8 <%= reply.admin_reply? ? 'bg-teal-200' : 'bg-purple-100' %> rounded-full flex items-center justify-center">
                <span class="text-sm font-medium <%= reply.admin_reply? ? 'text-teal-800' : 'text-purple-600' %>">
                  <%= reply.admin_reply? ? 'Admin' : 'You' %>
                </span>
              </div>
              <div class="text-sm text-gray-600">
                <strong><%= reply.admin_reply? ? 'Support Team' : current_user.full_name %></strong> - <%= reply.created_at.strftime('%b %d, %Y at %I:%M %p') %>
              </div>
            </div>
            <div class="text-gray-900 whitespace-pre-wrap"><%= reply.body %></div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Reply Form -->
  <% unless @ticket.status == 'closed' %>
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-teal-600 to-purple-600 px-8 py-6">
      <h3 class="text-2xl font-bold text-white">Send Reply</h3>
    </div>
    <div class="p-8">
      <%= form_with url: reply_founder_support_ticket_path(@ticket), local: true do |f| %>
        <div class="mb-4">
          <%= label_tag :message, "Your Message", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= text_area_tag :message, "", rows: 6, required: true, placeholder: "Type your reply here...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>
        <div class="flex justify-end">
          <%= submit_tag "Send Reply", class: "inline-flex items-center px-6 py-3 bg-teal-600 text-white font-medium rounded-lg shadow hover:bg-teal-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>