<%= render 'devise/shared/auth_layout', title: 'Manage your Nailab profile', subtitle: 'Update your credentials or close your account while staying secure.' do %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="space-y-5">
      <div>
        <%= f.label :email, class: 'block text-sm font-semibold text-slate-600' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="rounded-2xl border border-purple-100 bg-purple-50/70 p-3 text-sm text-purple-600">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>
      <div>
        <div class="flex items-center justify-between text-sm font-semibold text-slate-600">
          <span>Password</span>
          <span class="text-xs text-slate-500">leave blank to keep current</span>
        </div>
        <% if @minimum_password_length %>
          <p class="text-xs text-slate-500"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.label :password_confirmation, class: 'block text-sm font-semibold text-slate-600' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <p class="text-sm font-semibold text-slate-600">Current password</p>
        <p class="text-xs text-slate-500">We need this to confirm your changes.</p>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.submit 'Update', class: 'w-full rounded-2xl bg-purple-600 px-4 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-purple-700' %>
      </div>
    </div>
  <% end %>
  <div class="mt-6 space-y-3 border-t border-slate-100 pt-6 text-sm text-slate-600">
    <div>
      <%= button_to 'Cancel my account', registration_path(resource_name), method: :delete, data: { confirm: 'Are you sure?', turbo_confirm: 'Are you sure?' }, class: 'w-full rounded-2xl border border-slate-200 bg-white px-4 py-2 font-semibold text-slate-700 shadow-sm transition hover:bg-slate-50' %>
    </div>
    <div>
      <%= link_to 'Back', :back, class: 'text-slate-500 hover:text-purple-600' %>
    </div>
  </div>
  <%= render 'devise/shared/links' %>
<% end %>
