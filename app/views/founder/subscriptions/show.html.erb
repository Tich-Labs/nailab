<%# app/views/founder/subscriptions/show.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Subscription & Billing</h1>
    <p class="text-xl text-gray-600">Manage your subscription plan and billing information</p>
  </div>
  <% if @subscription %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-nailab-teal px-8 py-6">
        <h2 class="text-2xl font-bold text-white">Current Subscription</h2>
      </div>
      <div class="p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div class="p-6 bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Plan</h3>
            </div>
            <p class="text-gray-700 text-lg"><%= @subscription.plan_name %></p>
          </div>
          <div class="p-6 bg-gradient-to-r from-teal-50 to-purple-50 rounded-xl">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-nailab-teal" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Status</h3>
            </div>
            <span class="px-4 py-2 text-sm rounded-full font-semibold <%= @subscription.active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @subscription.active ? 'Active' : 'Inactive' %>
            </span>
          </div>
          <div class="p-6 bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Price</h3>
            </div>
            <p class="text-gray-700 text-lg font-bold">$<%= @subscription.price %>/<%= @subscription.billing_cycle %></p>
          </div>
          <div class="p-6 bg-gradient-to-r from-teal-50 to-purple-50 rounded-xl">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-nailab-teal" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Next Billing</h3>
            </div>
            <p class="text-gray-700 text-lg"><%= @subscription.next_billing_date&.strftime('%B %d, %Y') || 'N/A' %></p>
          </div>
        </div>
        <div class="bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 text-purple-600 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Plan Features
          </h3>
          <ul class="space-y-3">
            <% @subscription.features.split("\n").each do |feature| %>
              <li class="flex items-center text-gray-700">
                <svg class="w-5 h-5 text-nailab-teal mr-3 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
                <%= feature %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <%# Also show pricing grid so the user can change plans %>
    <div class="mt-8">
      <h3 class="text-xl font-semibold mb-4">Available Plans</h3>
      <%= render 'shared/pricing_grid', pricing_tiers: (@pricing_tiers || []) %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-nailab-teal to-purple-600 px-8 py-6">
        <h2 class="text-2xl font-bold text-white">No Active Subscription</h2>
      </div>
      <div class="p-12 text-center">
        <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-nailab-teal" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No Active Subscription</h3>
        <p class="text-gray-600 mb-8">Subscribe to unlock premium features and resources for your startup journey.</p>
        <%= link_to 'Choose a Plan', new_founder_subscription_path, class: "inline-flex items-center px-8 py-4 bg-purple-600 text-white text-xl font-bold rounded-xl shadow-lg hover:bg-purple-700 transition-all" %>
      </div>
    </div>
  <% end %>
</div>