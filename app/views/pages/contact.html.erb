<!-- app/views/pages/contact.html.erb -->
<div class="min-h-screen bg-white">
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-purple-50 to-teal-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6">
        Contact Us
      </h1>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto mb-12">
        Have a question, partnership inquiry, or want to get in touch? We'd love to hear from you.
      </p>

      <!-- Contact Info Card -->
      <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-8 space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-900">Email</h3>
          <a href="mailto:info@nailab.co.ke" class="text-xl text-purple-600 hover:text-purple-700 transition-colors">
            ceo@nailab.co.ke
          </a>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900">Phone</h3>
          <a href="tel:+254790492467" class="text-xl text-purple-600 hover:text-purple-700 transition-colors">
            +254 790 492 467
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content: Form + FAQ -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Send us a message</h2>
          <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6" do |f| %>
            <div>
              <%= f.label :name, "Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :name, required: true, autofocus: true, placeholder: "Your full name", class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-600 focus:ring-4 focus:ring-purple-100 transition" %>
            </div>
            <div>
              <%= f.label :email, "Email", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.email_field :email, required: true, placeholder: "you@example.com", class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-600 focus:ring-4 focus:ring-purple-100 transition" %>
            </div>
            <div>
              <%= f.label :subject, "Subject", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_field :subject, required: true, placeholder: "e.g. Partnership Inquiry", class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-600 focus:ring-4 focus:ring-purple-100 transition" %>
            </div>
            <div>
              <%= f.label :message, "Message", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= f.text_area :message, required: true, rows: 6, placeholder: "Tell us how we can help...", class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-600 focus:ring-4 focus:ring-purple-100 transition resize-none" %>
            </div>
            <%= f.submit "Send Message", class: "w-full bg-purple-600 text-white py-4 rounded-lg font-semibold hover:bg-purple-700 hover:-translate-y-0.5 shadow-lg hover:shadow-xl transition-all cursor-pointer" %>
          <% end %>
        </div>

        <!-- FAQ Accordion -->
        <div class="bg-gray-50 rounded-2xl p-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Frequently Asked Questions</h2>
          <div class="space-y-4" data-controller="faq">
            <% @faqs.each_with_index do |faq, idx| %>
              <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <button
                  type="button"
                  class="w-full px-6 py-5 flex justify-between items-center text-left font-semibold text-gray-900 hover:bg-gray-50 transition faq-toggle"
                  aria-expanded="false"
                  aria-controls="faq-answer-<%= idx %>"
                  data-faq-index="<%= idx %>"
                >
                  <span><%= faq[:q] %></span>
                  <svg class="w-6 h-6 text-purple-600 transition-transform duration-200" 
                      fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div id="faq-answer-<%= idx %>" 
                    class="px-6 pb-5 text-gray-700 hidden faq-answer">
                  <%= simple_format(faq[:a]) %>
                </div>
              </div>
            <% end %>
            <script>
              document.addEventListener('DOMContentLoaded', function() {
                document.querySelectorAll('.faq-toggle').forEach(function(btn) {
                  btn.addEventListener('click', function() {
                    var idx = btn.getAttribute('data-faq-index');
                    var answer = document.getElementById('faq-answer-' + idx);
                    if (answer) {
                      answer.classList.toggle('hidden');
                      var svg = btn.querySelector('svg');
                      if (svg) svg.classList.toggle('rotate-180');
                    }
                  });
                });
              });
            </script>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>