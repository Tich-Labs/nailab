<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-8">
      <div>
        <p class="text-sm text-gray-500"><%= resources.count %> <%= 'resource'.pluralize(resources.count) %> found</p>
      </div>
    </div>
    <% if resources.any? %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% resources.each do |resource| %>
          <%= render partial: 'shared/resource_card', locals: { resource: resource, variant: 'public' } %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white border border-dashed border-gray-200 rounded-lg p-8 text-center">
        <p class="text-gray-600 font-semibold">No resources match that selection.</p>
        <p class="text-sm text-gray-500 mt-2">Try another category or keyword.</p>
      </div>
    <% end %>
  </div>
</section>