<%# Homepage Sections Editor - following same pattern as individual editors %>
<h1 class="text-2xl font-bold mb-4">Edit: <%= @section_title %></h1>
<div class="grid grid-cols-2 gap-8 mb-6">

  <div>
    <h2 class="font-semibold mb-3">Editor</h2>
    <% if ['why_nailab_exists','our_impact','vision_mission'].include?(@section_key) %>
      <div class="mb-4 text-left">
        <%= link_to 'Preview live section', about_path(@section_key), class: 'inline-block text-sm text-slate-600' %>
      </div>
    <% end %>
    <div class="bg-white p-4 rounded shadow">
      <%= form_with url: admin_about_section_update_path(section: @section_key), method: :patch, local: true do |form| %>
        <p class="text-sm text-slate-600 mb-4">Update the <%= @section_key.gsub('_', ' ').downcase %> section content.</p>
        <% if @section_key == 'why_nailab_exists' %>
          <div class="mb-3">
            <%= label_tag 'section_payload[title]', 'Title', class: 'block font-bold text-black' %>
            <%= text_field_tag 'section_payload[title]', @section_content["title"], class: 'w-full form-input admin-form-input' %>
          </div>
          <div class="mb-3">
            <%= label_tag 'section_payload[description]', 'Description', class: 'block font-bold text-black' %>
            <%= text_area_tag 'section_payload[description]', @section_content["description"], rows: 6, class: 'w-full form-input admin-form-input' %>
          </div>
        <% end %>
        <% if @section_key == 'our_impact' %>
          <div class="mb-3">
            <%= label_tag 'section_payload[title]', 'Title', class: 'block font-bold text-black' %>
            <%= text_field_tag 'section_payload[title]', @section_content["title"], class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
          <div class="mb-3">
            <%= label_tag 'section_payload[description]', 'Description', class: 'block font-bold text-black' %>
            <%= text_area_tag 'section_payload[description]', @section_content["description"], rows: 6, class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
          <div class="mb-3">
            <label class="block font-bold text-black mb-2">Impact Stats</label>
            <% (@section_content["stats"] || []).each_with_index do |stat, idx| %>
              <div class="flex gap-3">
                <%= text_field_tag 'section_payload[stats][][value]', stat[:value] || stat["value"], placeholder: 'Value (e.g. 10+)', class: 'w-24 form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
                <%= text_field_tag 'section_payload[stats][][label]', stat[:label] || stat["label"], placeholder: 'Label (e.g. Years of Impact)', class: 'flex-1 form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
              </div>
            <% end %>
            <div class="mb-3">
              <span class="text-sm font-medium text-gray-500">Add stat</span>
              <div class="flex gap-3">
                <%= text_field_tag 'section_payload[stats][][value]', "", placeholder: 'Value (e.g. 10+)', class: 'w-24 form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
                <%= text_field_tag 'section_payload[stats][][label]', "", placeholder: 'Label (e.g. Years of Impact)', class: 'flex-1 form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
              </div>
            </div>
          <% end %>
        <% if @section_key == 'vision_mission' %>
          <div class="mb-3">
            <label class="block font-bold text-black mb-2">Mission Title</label>
            <%= text_field_tag 'section_payload[mission][title]', (@section_content["mission"] || {})[:title], class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
          <div class="mb-3">
            <label class="block font-bold text-black mb-2">Mission Description</label>
            <%= text_area_tag 'section_payload[mission][description]', (@section_content["mission"] || {})[:description], rows: 4, class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
          <div class="mb-3">
            <label class="block font-bold text-black mb-2">Vision Title</label>
            <%= text_field_tag 'section_payload[vision][title]', (@section_content["vision"] || {})[:title], class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
          <div class="mb-3">
            <label class="block font-bold text-black mb-2">Vision Description</label>
            <%= text_area_tag 'section_payload[vision][description]', (@section_content["vision"] || {})[:description], rows: 4, class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
        <% end %>
        <% if @section_key == 'what_drives_us' %>
          <div class="mb-3">
            <%= label_tag 'section_payload[title]', 'Title', class: 'block font-bold text-black' %>
            <%= text_field_tag 'section_payload[title]', @section_content["title"], class: 'w-full form-input admin-form-input' %>
          </div>
          <div class="mb-3">
            <%= label_tag 'section_payload[subtitle]', 'Subtitle', class: 'block font-bold text-black' %>
            <%= text_area_tag 'section_payload[subtitle]', @section_content["subtitle"], rows: 3, class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
          <div class="mb-3">
            <label class="block font-medium mb-2">Description</label>
            <%= text_area_tag 'section_payload[description]', @section_content["description"], rows: 6, class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
          </div>
        <% end %>
        <div class="flex gap-3">
          <%= form.submit 'Save ' + @section_key.gsub('_', ' ').titleize, class: 'btn btn-primary' %>
          <%= link_to 'Preview live section', about_path(@section_key), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
    </div>
  
</div>
<div>
    <h2 class="font-semibold mb-16">Preview</h2>
    <div class="bg-white p-6 rounded shadow space-y-5">
      <% if @section_key == 'why_nailab_exists' %>
        <div class="space-y-4">
          <div>
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Section Title</p>
            <h2 class="text-2xl font-bold text-slate-900"><%= @section_content["title"] %></h2>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Content</p>
            <p class="text-sm text-slate-600"><%= @section_content["description"] %></p>
          </div>
        </div>
      <% end %>
      <% if @section_key == 'our_impact' %>
        <div class="space-y-4">
          <div>
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Section Title</p>
            <h2 class="text-2xl font-bold text-slate-900"><%= @section_content["title"] %></h2>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Description</p>
            <p class="text-sm text-slate-600"><%= @section_content["description"] %></p>
          </div>
          <div class="space-y-4 bg-slate-50 p-4 rounded-xl">
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Impact Stats</p>
            <div class="flex flex-row justify-center items-center gap-6 flex-wrap">
              <% (@section_content["stats"] || []).each do |stat| %>
                <div class="text-center">
                  <p class="text-3xl font-bold text-slate-800"><%= stat[:value] || stat["value"] %></p>
                  <p class="text-xs font-semibold uppercase tracking-wider text-slate-500"><%= stat[:label] || stat["label"] %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <% if @section_key == 'vision_mission' %>
        <div class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Mission</p>
              <h2 class="text-2xl font-bold text-slate-900"><%= (@section_content["mission"] || {})[:title] %></h2>
              <p class="text-sm text-slate-600"><%= (@section_content["mission"] || {})[:description] %></p>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Vision</p>
              <h2 class="text-2xl font-bold text-slate-900"><%= (@section_content["vision"] || {})[:title] %></h2>
              <p class="text-sm text-slate-600"><%= (@section_content["vision"] || {})[:description] %></p>
            </div>
          </div>
        </div>
      <% end %>
      <% if @section_key == 'what_drives_us' %>
        <div class="space-y-4">
          <div>
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Title</p>
            <h2 class="text-2xl font-bold text-slate-900"><%= @section_content["title"] %></h2>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Subtitle</p>
            <p class="text-sm text-slate-600"><%= @section_content["subtitle"] %></p>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Description</p>
            <p class="text-sm text-slate-600"><%= @section_content["description"] %></p>
          </div>
        </div>
      <% end %>
    </div>
    <p class="text-xs text-slate-500 mt-6">Preview shows the current section content. Actual styling may vary on the live About page.</p>
  </div>
