<%# app/views/mentor_onboarding/steps/_review.html.erb %>
<div class="p-8">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Review & Submit</h2>
    <p class="text-gray-600">Please review your information before completing your mentor profile</p>
  </div>
  <div class="space-y-8">
    <!-- Basic Details -->
    <div class="bg-slate-50 rounded-2xl p-6">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-semibold text-slate-900">Basic Details</h3>
        <%= link_to mentor_onboarding_path(step: 'basic_details'), class: 'text-purple-600 hover:text-purple-700 text-sm' do %>
          <i class="fas fa-edit mr-1"></i> Edit
        <% end %>
      </div>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-slate-500">Full Name</dt>
          <dd class="text-sm text-slate-900"><%= @profile.full_name || 'Not provided' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Job Title</dt>
          <dd class="text-sm text-slate-900"><%= @profile.title || 'Not provided' %></dd>
        </div>
        <div class="md:col-span-2">
          <dt class="text-sm font-medium text-slate-500">Professional Bio</dt>
          <dd class="text-sm text-slate-900 mt-1"><%= @profile.bio || 'Not provided' %></dd>
        </div>
      </dl>
    </div>
    <!-- Work & Experience -->
    <div class="bg-slate-50 rounded-2xl p-6">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-semibold text-slate-900">Work & Experience</h3>
        <%= link_to mentor_onboarding_path(step: 'work_experience'), class: 'text-purple-600 hover:text-purple-700 text-sm' do %>
          <i class="fas fa-edit mr-1"></i> Edit
        <% end %>
      </div>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Organization</dt>
          <dd class="text-sm text-gray-900"><%= @profile.organization || 'Not provided' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Years of Experience</dt>
          <dd class="text-sm text-gray-900"><%= @profile.years_experience || 'Not provided' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Advisory Experience</dt>
          <dd class="text-sm text-gray-900"><%= @profile.advisory_experience ? 'Yes' : 'No' %></dd>
        </div>
      </dl>
    </div>
    <!-- Mentorship Focus -->
    <div class="bg-slate-50 rounded-2xl p-6">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-semibold text-slate-900">Mentorship Focus</h3>
        <%= link_to mentor_onboarding_path(step: 'mentorship_focus'), class: 'text-purple-600 hover:text-purple-700 text-sm' do %>
          <i class="fas fa-edit mr-1"></i> Edit
        <% end %>
      </div>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Industries</dt>
          <dd class="flex flex-wrap gap-2 mt-1">
            <% (@profile.sectors || []).each do |sector| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
                <%= sector %>
              </span>
            <% end %>
            <% if (@profile.sectors || []).empty? %>
              <span class="text-sm text-gray-500">None selected</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Expertise Areas</dt>
          <dd class="flex flex-wrap gap-2 mt-1">
            <% (@profile.expertise || []).each do |area| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= area %>
              </span>
            <% end %>
            <% if (@profile.expertise || []).empty? %>
              <span class="text-sm text-gray-500">None selected</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Preferred Startup Stages</dt>
          <dd class="flex flex-wrap gap-2 mt-1">
            <% (@profile.stage_preference || []).each do |stage| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                <%= stage %>
              </span>
            <% end %>
            <% if (@profile.stage_preference || []).empty? %>
              <span class="text-sm text-gray-500">None selected</span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
    <!-- Mentorship Style -->
    <div class="bg-slate-50 rounded-2xl p-6">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-semibold text-slate-900">Mentorship Style</h3>
        <%= link_to mentor_onboarding_path(step: 'mentorship_style'), class: 'text-purple-600 hover:text-purple-700 text-sm' do %>
          <i class="fas fa-edit mr-1"></i> Edit
        <% end %>
      </div>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Mentorship Approach</dt>
          <dd class="text-sm text-gray-900 mt-1"><%= @profile.mentorship_approach || 'Not provided' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Motivation</dt>
          <dd class="text-sm text-gray-900 mt-1"><%= @profile.motivation || 'Not provided' %></dd>
        </div>
      </dl>
    </div>
    <!-- Availability -->
    <div class="bg-slate-50 rounded-2xl p-6">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-semibold text-slate-900">Availability</h3>
        <%= link_to mentor_onboarding_path(step: 'availability'), class: 'text-purple-600 hover:text-purple-700 text-sm' do %>
          <i class="fas fa-edit mr-1"></i> Edit
        <% end %>
      </div>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Hours per Month</dt>
          <dd class="text-sm text-gray-900">
            <% case @profile.availability_hours_month %>
            <% when 2 %> Up to 2 hours/week
            <% when 4 %> 3–5 hours/month
            <% when 8 %> 6–10 hours/month
            <% when 12 %> 10+ hours/month
            <% when 0 %> Flexible
            <% else %> Not specified
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Preferred Mode</dt>
          <dd class="text-sm text-gray-900"><%= @profile.preferred_mentorship_mode || 'Not specified' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Rate per Hour</dt>
          <dd class="text-sm text-gray-900">
            <% if @profile.pro_bono %>
              Pro bono
            <% elsif @profile.rate_per_hour.present? %>
              <%= @profile.currency || 'KES' %> <%= number_with_precision(@profile.rate_per_hour, precision: 2) %>
            <% else %>
              Not specified
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">LinkedIn/Profile</dt>
          <dd class="text-sm text-gray-900">
            <% if @profile.linkedin_url.present? %>
              <%= link_to @profile.linkedin_url, @profile.linkedin_url, target: '_blank', class: 'text-teal-600 hover:text-teal-700' %>
            <% else %>
              Not provided
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
  <div class="mt-8 p-6 bg-purple-50 border border-purple-200 rounded-2xl">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <i class="fas fa-info-circle text-purple-400"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-purple-800">Ready to submit?</h3>
        <p class="mt-1 text-sm text-purple-700">
          By completing your mentor profile, you'll be joining Nailab's mentor network and will be visible to startups looking for guidance.
        </p>
      </div>
    </div>
  </div>
  <div class="bg-white border border-slate-200 rounded-2xl p-6">
    <h3 class="text-lg font-semibold text-slate-900">Confirm your email</h3>
    <p class="mt-1 text-sm text-slate-600">We’ll send you a confirmation link to activate your account.</p>
    <div class="mt-4">
      <%= label_tag :email, "Email address", class: "block text-sm font-medium text-slate-600 mb-2" %>
      <%= email_field_tag :email, (session[:mentor_onboarding_email] || ""), required: true,
                            class: "w-full px-4 py-3 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-purple-300 focus:border-purple-500",
                            placeholder: "you@example.com" %>
    </div>
    <div class="mt-4">
      <label class="flex items-start space-x-3">
        <%= check_box_tag :consent, "1", false, class: "mt-1 rounded border-slate-300 text-purple-600 focus:ring-purple-500" %>
        <span class="text-sm text-slate-700">I agree to receive email from Nailab related to my onboarding and account activation.</span>
      </label>
    </div>
  </div>
</div>
</div>