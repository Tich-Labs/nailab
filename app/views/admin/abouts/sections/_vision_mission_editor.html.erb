<h2 class="font-semibold mb-3">Editor</h2>
<div class="mb-4 text-left">
  <%= link_to 'Preview live section', about_path('vision_mission'), class: 'btn btn-secondary' %>
</div>
<div class="bg-white p-4 rounded shadow">
  <%= form_with url: admin_about_section_update_path(section: 'vision_mission'), method: :patch, local: true do |form| %>
    <p class="text-sm text-slate-600 mb-4">Update Vision & Mission content.</p>
    <div class="mb-3">
      <label class="block font-bold text-black mb-2">Mission Title</label>
      <%= text_field_tag 'section_payload[mission][title]', (@section_content["mission"] || {})[:title], id: 'editor_mission_title', class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
    </div>
    <div class="mb-3">
      <label class="block font-bold text-black mb-2">Mission Description</label>
      <%= text_area_tag 'section_payload[mission][description]', (@section_content["mission"] || {})[:description], id: 'editor_mission_description', rows: 4, class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
    </div>
    <div class="mb-3">
      <label class="block font-bold text-black mb-2">Vision Title</label>
      <%= text_field_tag 'section_payload[vision][title]', (@section_content["vision"] || {})[:title], id: 'editor_vision_title', class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
    </div>
    <div class="mb-3">
      <label class="block font-bold text-black mb-2">Vision Description</label>
      <%= text_area_tag 'section_payload[vision][description]', (@section_content["vision"] || {})[:description], id: 'editor_vision_description', rows: 4, class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' %>
    </div>
    <div class="flex gap-3">
      <%= form.submit 'Save Vision & Mission', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
