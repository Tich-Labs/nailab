<%# app/views/founder/sessions/show.html.erb %>
<div data-theme="nailab_founder" class="min-h-screen bg-base-100 text-base-content">
  <div class="max-w-4xl mx-auto py-8 px-4">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900">Session Details</h1>
        <span class="inline-block px-3 py-1 text-sm rounded-full <%= @session.status == 'scheduled' ? 'bg-blue-100 text-blue-800' : @session.status == 'completed' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> mt-2">
          <%= @session.status.titleize %>
        </span>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="text-lg font-semibold text-gray-700">Mentor</h3>
        <p class="text-gray-600 mt-1"><%= @session.mentor.name %></p>
        <p class="text-sm text-gray-500"><%= @session.mentor.expertise %></p>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-700">Date & Time</h3>
        <p class="text-gray-600 mt-1"><%= @session.scheduled_at.strftime('%B %d, %Y at %I:%M %p') %></p>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-700">Duration</h3>
        <p class="text-gray-600 mt-1"><%= @session.duration %> minutes</p>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-700">Session Type</h3>
        <p class="text-gray-600 mt-1"><%= @session.session_type %></p>
      </div>
    </div>
    <% if @session.agenda.present? %>
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-700">Agenda</h3>
        <p class="text-gray-600 mt-1"><%= @session.agenda %></p>
      </div>
    <% end %>
    <% if @session.status == 'scheduled' && @session.scheduled_at > Time.current %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <h3 class="font-medium text-blue-800">Session Starting Soon</h3>
        <p class="text-blue-700 text-sm mt-1">Your session will begin at <%= @session.scheduled_at.strftime('%I:%M %p') %>. Make sure you're prepared!</p>
        <button class="mt-3 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 text-sm">Join Session</button>
      </div>
    <% elsif @session.status == 'completed' %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <h3 class="font-medium text-green-800">Session Completed</h3>
        <p class="text-green-700 text-sm mt-1">This session has ended. How was your experience?</p>
        <div class="mt-3 flex space-x-2">
          <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 text-sm">Rate Session</button>
          <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 text-sm">Request Follow-up</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>