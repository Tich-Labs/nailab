<%# app/views/founder/milestones/show.html.erb %>
<div data-theme="nailab_founder" class="min-h-screen bg-base-100 text-base-content">
  <div class="max-w-4xl mx-auto py-8 px-4">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @milestone.title %></h1>
        <span class="inline-block px-3 py-1 text-sm rounded-full <%= @milestone.completed ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %> mt-2">
          <%= @milestone.completed ? 'Completed' : 'Pending' %>
        </span>
      </div>
      <%= link_to 'Edit Milestone', edit_founder_milestone_path(@milestone), class: "bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700" %>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="font-medium text-gray-700">Description</h3>
        <p class="text-gray-600 mt-1"><%= @milestone.description %></p>
      </div>
      <div>
        <h3 class="font-medium text-gray-700">Due Date</h3>
        <p class="text-gray-600 mt-1"><%= @milestone.due_date.strftime('%B %d, %Y') %></p>
      </div>
      <div>
        <h3 class="font-medium text-gray-700">Category</h3>
        <p class="text-gray-600 mt-1"><%= @milestone.category %></p>
      </div>
      <div>
        <h3 class="font-medium text-gray-700">Priority</h3>
        <p class="text-gray-600 mt-1"><%= @milestone.priority %></p>
      </div>
    </div>
    <% if @milestone.notes.present? %>
      <div class="border-t pt-6">
        <h3 class="font-medium text-gray-700 mb-4">Notes</h3>
        <p class="text-gray-600"><%= @milestone.notes %></p>
      </div>
    <% end %>
  </div>
</div>
</div>