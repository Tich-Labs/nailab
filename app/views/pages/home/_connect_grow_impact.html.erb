<%# _connect_grow_impact.html.erb - ConnectGrowImpact (community/impact) %>
<section class="py-20 bg-gradient-to-br from-purple-50 to-teal-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-6">Connect. Grow. Impact.</h2>
    <p class="text-xl text-gray-700 mb-8 max-w-3xl mx-auto">Join Nailab's ecosystem of startups, mentors, and partners to drive sustainable innovation across Africa.</p>
    <div class="flex flex-wrap justify-center gap-6">
      <% stats = [
        { value: '1031', label: 'Startup Founders' },
        { value: '50', label: 'Active Mentors' },
        { value: '$250M', label: 'Combined Startup Valuation' }
      ] %>
      <% stats.each do |stat| %>
        <div class="bg-white rounded-xl shadow p-8 w-64">
          <h3 class="text-3xl font-bold text-teal-700 mb-2"><%= stat[:value] %></h3>
          <p class="text-gray-700"><%= stat[:label] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>
