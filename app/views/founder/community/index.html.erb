<%# app/views/founder/community/index.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-nailab-purple mb-4">Community & Peer Connections</h1>
    <p class="text-xl text-gray-600">Connect with fellow founders, share experiences, and build lasting relationships</p>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Recommended Peers -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-nailab-purple text-white px-8 py-6 rounded-t-xl">
          <h2 class="text-2xl font-bold text-base-content">Recommended Peers</h2>
        </div>
        <div class="p-8">
          <div class="space-y-6">
            <% @recommended_peers.each do |peer| %>
              <div class="card bg-base-100 rounded-xl">
                <div class="card-body p-6 flex items-center justify-between">
                  <div class="flex items-center space-x-4">
                  <div class="w-16 h-16 bg-nailab-purple text-white rounded-full flex items-center justify-center">
                    <span class="font-bold text-xl"><%= peer.name.first %></span>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900"><%= peer.name %></h3>
                    <p class="text-gray-600"><%= peer.startup_profile&.sector || 'Startup Founder' %></p>
                    <p class="text-sm text-gray-500"><%= peer.startup_profile&.stage || 'Early Stage' %></p>
                  </div>
                  </div>
                  <div class="flex space-x-3">
                  <% if peer.mentor.present? %>
                    <%= link_to 'View Profile', founder_mentor_path(peer.mentor), class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-semibold rounded-lg hover:bg-purple-700 transition-all" %>
                  <% elsif peer.startup_profile.present? %>
                    <%= link_to 'View Profile', public_startup_profile_path(peer.startup_profile), class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-semibold rounded-lg hover:bg-purple-700 transition-all" %>
                  <% else %>
                    <%= link_to 'View Profile', '#', class: "inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 text-sm font-semibold rounded-lg" %>
                  <% end %>

                  <%= form_with url: founder_connections_path, scope: :connection, method: :post, local: true do |c| %>
                    <%= c.hidden_field :peer_id, value: peer.id %>
                    <%= c.submit 'Connect', class: "inline-flex items-center px-4 py-2 bg-nailab-teal text-white text-sm font-semibold rounded-lg hover:bg-nailab-teal transition-all" %>
                  <% end %>
                </div>
                </div>
              </div>
            <% end %>
          </div>
          <% if @recommended_peers.empty? %>
            <div class="text-center py-12">
              <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg aria-hidden="true" class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">No recommended peers yet</h3>
              <p class="text-gray-600">Complete your profile to get personalized peer recommendations.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Community Activity -->
      <div class="space-y-8">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-nailab-purple text-white px-8 py-6 rounded-t-xl">
          <h3 class="text-2xl font-bold text-white">Community Activity</h3>
        </div>
        <div class="p-8 bg-base-100 rounded-b-xl">
          <div class="space-y-6">
            <div class="card bg-base-200 rounded-xl">
              <div class="card-body p-6">
                <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                  <svg aria-hidden="true" class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <h4 class="text-lg font-semibold text-purple-900">Upcoming Events</h4>
                </div>
                <p class="text-purple-700">Join our weekly founder meetup this Friday!</p>
              </div>
            </div>
            <div class="card bg-base-200 rounded-xl">
              <div class="card-body p-6">
                <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 bg-teal-100 rounded-full flex items-center justify-center">
                  <svg aria-hidden="true" class="w-5 h-5 text-nailab-teal" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
                  </svg>
                </div>
                <h4 class="text-lg font-semibold text-teal-900">Discussion Forums</h4>
                </div>
                <p class="text-nailab-teal">Share experiences and get advice from peers.</p>
              </div>
            </div>
            <div class="card bg-base-200 rounded-xl">
              <div class="card-body p-6">
                <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                  <svg aria-hidden="true" class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <h4 class="text-lg font-semibold text-green-900">Success Stories</h4>
                </div>
                <p class="text-green-700">Read about founders who made it big.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Quick Message -->
    <div class="mt-12 bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-nailab-purple text-white px-8 py-6 rounded-t-xl">
      <h3 class="text-2xl font-bold text-white">Send a Quick Message</h3>
    </div>
    <div class="p-8 bg-base-100 rounded-b-xl">
      <div class="space-y-6">
        <%= form_with url: founder_peer_messages_path, scope: :peer_message, local: true do |pm| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= pm.label :recipient_id, 'Select Peer', class: 'block text-sm font-semibold text-gray-900 mb-2' %>
              <% selected_recipient = params[:recipient_id].presence || nil %>
              <%= pm.select :recipient_id, options_for_select(@recommended_peers.map { |p| [p.name, p.id] }, selected_recipient), { prompt: 'Choose a peer...' }, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent' %>
            </div>
            <div class="md:col-span-2">
              <%= pm.label :content, 'Message', class: 'block text-sm font-semibold text-gray-900 mb-2' %>
              <%= pm.text_area :content, rows: 4, placeholder: 'Your message...', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent' %>
            </div>
          </div>
          <div class="flex justify-end">
            <%= pm.submit 'Send Message', class: 'inline-flex items-center px-6 py-3 bg-nailab-teal text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-nailab-teal transition-all' %>
          </div>
        <% end %>
        <% if current_user.admin? %>
          <div class="mt-6 text-right">
            <%= form_with url: cleanup_empty_startup_profiles_path, method: :post, local: true do |f| %>
              <%= f.submit 'Delete Empty Startup Profiles', data: { confirm: 'Delete all startup profiles with no description or value proposition? This cannot be undone.' }, class: 'inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-semibold rounded-lg hover:bg-red-700 transition-all' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>