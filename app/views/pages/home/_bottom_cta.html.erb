<%# _bottom_cta.html.erb - BottomCTA (call to action) %>
<section class="py-20 bg-teal-600">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-3xl lg:text-5xl font-bold text-white mb-6">Ready to grow your startup?</h2>
    <p class="text-xl text-white/90 mb-8">Join Nailab and connect with mentors, programs, and a thriving community of innovators.</p>
    <div class="flex flex-wrap justify-center gap-4">
      <%= link_to 'Browse Programs', programs_path, class: 'inline-flex items-center justify-center px-8 py-4 bg-white text-teal-700 text-lg font-semibold rounded-xl shadow-lg hover:bg-teal-50 transition-all' %>
      <%= link_to 'Find a Mentor', '/mentors', class: 'inline-flex items-center justify-center px-8 py-4 border border-white text-white text-lg font-semibold rounded-xl hover:bg-white/10 transition-all' %>
    </div>
  </div>
</section>
