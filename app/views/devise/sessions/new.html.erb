<%= render 'devise/shared/auth_layout', title: 'Log in to Nailab', subtitle: 'Access your profile, cohorts, and connections in one secure place.' do %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <div class="space-y-4">
    <%= link_to user_linkedin_omniauth_authorize_path, class: 'w-full flex items-center justify-center gap-3 rounded-2xl bg-blue-600 px-4 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-blue-700' do %>
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
      Continue with LinkedIn
    <% end %>
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <span class="w-full border-t border-slate-200" />
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="bg-white px-2 text-slate-500">Or continue with email</span>
      </div>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-5">
      <div>
        <%= f.label :email, class: 'block text-sm font-semibold text-slate-600' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.label :password, class: 'block text-sm font-semibold text-slate-600' %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-3">
          <%= f.check_box :remember_me, class: 'h-4 w-4 rounded border-slate-300 text-purple-600 focus:ring-purple-500' %>
          <%= f.label :remember_me, class: 'text-sm text-slate-500' %>
        </div>
      <% end %>
      <div>
        <%= f.submit 'Log in', class: 'w-full rounded-2xl bg-purple-600 px-4 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-purple-700' %>
      </div>
    </div>
  <% end %>
  <%= render 'devise/shared/links' %>
<% end %>
