<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-4xl lg:text-5xl font-bold text-nailab-purple mb-4">Startup Monthly Updates</h1>
        <p class="text-xl text-base-content/60">Track and document your startup's monthly progress</p>
      </div>
      <%= link_to 'New Update', new_founder_startup_update_path, class: "btn btn-outline" %>
    </div>
  </div>
  <% if @updates.any? %>
    <table class="table w-full">
      <thead>
        <tr>
          <th>Month</th>
          <th>Year</th>
          <th>MRR</th>
          <th>New Customers</th>
          <th>Churned</th>
          <th>Cash</th>
          <th>Burn Rate</th>
          <th>Runway</th>
        </tr>
      </thead>
      <tbody>
        <% @updates.each do |update| %>
          <tr>
            <td><%= Date::MONTHNAMES[update.report_month] %></td>
            <td><%= update.report_year %></td>
            <td>$<%= number_with_delimiter(update.mrr) %></td>
            <td><%= update.new_paying_customers %></td>
            <td><%= update.churned_customers %></td>
            <td>$<%= number_with_delimiter(update.cash_at_hand) %></td>
            <td>$<%= number_with_delimiter(update.burn_rate) %></td>
            <td><%= update.runway || '-' %> mo</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info mt-8">No updates yet. Submit your first update!</div>
  <% end %>
</div>