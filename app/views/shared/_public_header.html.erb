<%# app/views/shared/_public_header.html.erb %>
<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center" do %>
          <%= image_tag "logo-blue.original.png", alt: "Nailab", class: "h-10 w-auto" %>
        <% end %>
      </div>
      <!-- Main Navigation -->
      <nav class="hidden md:flex space-x-8">
        <% network_active = request.path.start_with?(startups_path) || request.path.start_with?(mentors_path) %>
        <div class="relative group">
          <span class="inline-flex items-center gap-1 cursor-pointer transition-colors px-3 py-2 text-sm font-medium #{network_active ? 'text-teal-600' : 'text-gray-700 hover:text-teal-600'}">
            Our Network
            <span class="text-xs">▼</span>
          </span>
          <div class="absolute top-full left-0 mt-0 translate-y-1 w-48 bg-white rounded-2xl shadow-2xl opacity-0 group-hover:opacity-100 pointer-events-none group-hover:pointer-events-auto transition-all z-50">
            <%= link_to 'Startups', startups_path, class: "block px-4 py-2 transition-colors #{'bg-teal-50 text-teal-600 font-semibold' if request.path == startups_path}" %>
            <%= link_to 'Mentors', mentors_path, class: "block px-4 py-2 transition-colors #{'bg-teal-50 text-teal-600 font-semibold' if request.path == mentors_path}" %>
          </div>
        </div>
        <%= link_to 'Programs', programs_path, class: "text-gray-700 hover:text-teal-600 px-3 py-2 text-sm font-medium transition-colors #{request.path.start_with?(programs_path) ? 'text-teal-600' : ''}" %>
        <% current_resource_slug = params[:category].presence || @selected_category.presence || @resource_category_slug.presence || 'all' %>
        <% resources_active = request.path.start_with?(resources_path) %>
        <div class="relative group">
          <span class="inline-flex items-center gap-1 cursor-pointer transition-colors px-3 py-2 text-sm font-medium #{resources_active ? 'text-teal-600' : 'text-gray-700 hover:text-teal-600'}">
            Resources
            <span class="text-xs">▼</span>
          </span>
          <div class="absolute top-full left-0 mt-0 w-72 translate-y-1 bg-white rounded-2xl shadow-2xl opacity-0 group-hover:opacity-100 pointer-events-none group-hover:pointer-events-auto transition-all z-50">
            <%= link_to 'Blogs', resources_category_path(category: 'blogs'), class: "block px-4 py-2 text-gray-700 transition-colors #{'bg-teal-50 text-teal-600 font-semibold' if current_resource_slug == 'blogs'}" %>
            <%= link_to 'Knowledge Hub', resources_category_path(category: 'knowledge-hub'), class: "block px-4 py-2 text-gray-700 transition-colors #{'bg-teal-50 text-teal-600 font-semibold' if current_resource_slug == 'knowledge-hub'}" %>
            <%= link_to 'Opportunities', resources_category_path(category: 'opportunities'), class: "block px-4 py-2 text-gray-700 transition-colors #{'bg-teal-50 text-teal-600 font-semibold' if current_resource_slug == 'opportunities'}" %>
            <%= link_to 'Events & Webinars', resources_category_path(category: 'events'), class: "block px-4 py-2 text-gray-700 transition-colors #{'bg-teal-50 text-teal-600 font-semibold' if current_resource_slug == 'events'}" %>
          </div>
        </div>
        <%= link_to 'Pricing', pricing_path, class: "text-gray-700 hover:text-teal-600 px-3 py-2 text-sm font-medium transition-colors #{current_page?(pricing_path) ? 'text-teal-600' : ''}" %>
        <%= link_to 'Contact', contact_path, class: "text-gray-700 hover:text-teal-600 px-3 py-2 text-sm font-medium transition-colors #{current_page?(contact_path) ? 'text-teal-600' : ''}" %>
      </nav>
      <!-- Right Side Actions -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- Logged In State -->
          <% if current_user.user_profile&.role == 'mentor' %>
            <%= link_to 'Go to Dashboard', mentor_root_path, class: "bg-teal-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-teal-700 transition-colors" %>
          <% else %>
            <%= link_to 'Go to Dashboard', founder_root_path, class: "bg-teal-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-teal-700 transition-colors" %>
          <% end %>
          <!-- User Dropdown -->
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" class="flex items-center space-x-2 text-gray-700 hover:text-gray-900">
              <div class="w-8 h-8 bg-teal-100 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-teal-600">
                  <%= current_user.user_profile&.full_name&.first || current_user.email.first.upcase %>
                </span>
              </div>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
              <%= link_to 'Account Settings', founder_account_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-t-lg" %>
              <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-b-lg" %>
            </div>
          </div>
        <% else %>
          <!-- Logged Out State -->
          <%= link_to 'Log in', new_user_session_path, class: "text-gray-700 hover:text-teal-600 px-3 py-2 text-sm font-medium transition-colors" %>
          <%= link_to 'Sign up', new_user_registration_path, class: "bg-teal-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-teal-700 transition-colors" %>
        <% end %>
        <!-- Mobile menu button -->
        <button class="md:hidden" data-action="click->mobile-menu#toggle">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>