<%# app/views/founder/startup_profiles/edit.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Edit Startup Profile</h1>
    <p class="text-xl text-gray-600">Update your startup's information to attract investors and partners</p>
  </div>
  <div class="bg-white rounded-xl shadow-lg p-8 lg:p-12">
    <%= form_with model: @startup_profile, url: founder_startup_profile_path, method: :patch, class: "space-y-8" do |f| %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-6">
          <div>
            <%= f.label :startup_name, class: "block text-lg font-semibold text-gray-900 mb-2" %>
            <%= f.text_field :startup_name, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
          </div>
          <div>
            <%= f.label :description, class: "block text-lg font-semibold text-gray-900 mb-2" %>
            <%= f.text_area :description, rows: 4, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all resize-none" %>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= f.label :stage, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.select :stage, [['Idea', 'Idea'], ['MVP', 'MVP'], ['Early Stage', 'Early Stage'], ['Growth', 'Growth'], ['Scale', 'Scale']], {}, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
            </div>
            <div>
              <%= f.label :sector, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :sector, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
            </div>
          </div>
        </div>
        <div class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= f.label :funding_stage, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.select :funding_stage, [['Pre-seed', 'Pre-seed'], ['Seed', 'Seed'], ['Series A', 'Series A'], ['Series B+', 'Series B+'], ['Bootstrapped', 'Bootstrapped']], {}, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
            </div>
            <div>
              <%= f.label :funding_raised, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.number_field :funding_raised, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
            </div>
          </div>
          <div>
            <%= f.label :target_market, class: "block text-lg font-semibold text-gray-900 mb-2" %>
            <%= f.text_field :target_market, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
          </div>
          <div>
            <%= f.label :value_proposition, class: "block text-lg font-semibold text-gray-900 mb-2" %>
            <%= f.text_area :value_proposition, rows: 3, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all resize-none" %>
          </div>
        </div>
      </div>
      <!-- Team Members Section -->
      <div class="pt-8 border-t border-gray-200">
        <div class="mb-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Team Members</h3>
          <p class="text-sm text-gray-600">Add your co-founders and key team members. This is optional - you can start alone and add team members later as you grow.</p>
        </div>
        <div id="team-members-container" class="space-y-4">
          <% (@startup_profile.team_members || []).each_with_index do |member, index| %>
            <div class="team-member-item flex items-center gap-4 p-4 bg-gray-50 rounded-lg">
              <div class="flex-1 grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <%= text_field_tag "startup_profile[team_members][][name]", member['name'],
                      placeholder: "Team member name",
                      class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
                  <%= hidden_field_tag "startup_profile[team_members][][id]", member['id'] %>
                </div>
                <div>
                  <%= text_field_tag "startup_profile[team_members][][role]", member['role'],
                      placeholder: "Role (e.g., Co-founder, CTO, Designer)",
                      class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" %>
                </div>
              </div>
              <button type="button" class="remove-team-member text-red-600 hover:text-red-800 p-2" title="Remove team member">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <button type="button" id="add-team-member" class="inline-flex items-center px-4 py-2 bg-teal-600 text-white text-sm font-medium rounded-lg hover:bg-teal-700 transition-all">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Team Member
          </button>
        </div>
      </div>
      <div class="pt-8 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row gap-4 justify-between">
          <div class="flex items-start gap-3">
            <%= f.check_box :profile_visibility, class: "mt-1" %>
            <div>
              <p class="text-lg font-semibold text-teal-900">Share this profile in the public directory</p>
              <p class="text-sm text-teal-700">When enabled, interested mentors, partners, and investors can view the information you choose to display.</p>
            </div>
          </div>
          <div class="flex flex-col sm:flex-row gap-4 justify-end">
            <%= link_to 'Cancel', founder_startup_profile_path, class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 text-lg font-semibold rounded-xl hover:bg-gray-50 transition-all" %>
            <%= f.submit "Update Profile", class: "inline-flex items-center justify-center px-8 py-3 bg-teal-600 text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-teal-700 transition-all" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('team-members-container');
    const addButton = document.getElementById('add-team-member');

    // Add new team member
    addButton.addEventListener('click', function() {
      const memberDiv = document.createElement('div');
      memberDiv.className = 'team-member-item flex items-center gap-4 p-4 bg-gray-50 rounded-lg';
      memberDiv.innerHTML = `
        <div class="flex-1 grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <input type="text" name="startup_profile[team_members][][name]" placeholder="Team member name" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all">
            <input type="hidden" name="startup_profile[team_members][][id]" value="${Date.now()}">
          </div>
          <div>
            <input type="text" name="startup_profile[team_members][][role]" placeholder="Role (e.g., Co-founder, CTO, Designer)" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all">
          </div>
        </div>
        <button type="button" class="remove-team-member text-red-600 hover:text-red-800 p-2" title="Remove team member">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        </button>
      `;
      container.appendChild(memberDiv);
    });

    // Remove team member
    container.addEventListener('click', function(e) {
      if (e.target.closest('.remove-team-member')) {
        e.target.closest('.team-member-item').remove();
      }
    });
  });
</script>