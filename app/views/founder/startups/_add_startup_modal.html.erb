<div data-controller="add-startup-modal" id="add-startup-modal-root">
  <div class="modal" data-add-startup-modal-target="modal" style="display:none">
    <div class="modal-box w-11/12 max-w-2xl">
      <h3 class="font-bold text-lg">Add an Additional Startup</h3>
      <div data-add-startup-modal-target="flash" class="my-2"></div>
      <form data-add-startup-modal-target="form" action="<%= founder_startups_path %>" method="post" enctype="multipart/form-data">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="grid grid-cols-1 gap-4 mt-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">Startup name</label>
            <input name="startup[startup_name]" class="input input-bordered w-full" required placeholder="Acme Labs">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Website</label>
            <input name="startup[website_url]" type="url" class="input input-bordered w-full" placeholder="https://example.com">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Description</label>
            <textarea name="startup[description]" rows="4" class="textarea textarea-bordered w-full" placeholder="Short description"></textarea>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Team size</label>
            <input name="startup[team_size]" type="number" min="1" class="input input-bordered w-full">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Logo (optional)</label>
            <input name="startup[logo]" type="file" accept="image/*" class="file-input file-input-bordered w-full">
          </div>
        </div>
        <div class="modal-action mt-4">
          <button type="button" class="btn btn-ghost" data-action="click->add-startup-modal#close">Cancel</button>
          <button type="submit" class="btn btn-primary" data-action="add-startup-modal#submit">Add Startup</button>
        </div>
      </form>
    </div>
  </div>
</div>
