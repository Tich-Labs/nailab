<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Request Ongoing Mentorship Partnership</h1>
        <p class="text-gray-600">Build a long-term relationship with an experienced mentor</p>
      </div>
      <%= form_with model: @mentorship_request, url: mentorship_requests_path, method: :post, class: "space-y-6" do |f| %>
        <%= f.hidden_field :request_type, value: "ongoing" %>
        <!-- Personal Information -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Personal Information</h3>
          <div class="grid grid-cols-1 gap-6">
            <div>
              <%= f.label :full_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :full_name,
                               placeholder: "Your full name",
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple",
                               required: true %>
            </div>
            <div>
              <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :phone_number,
                               placeholder: "Your phone number",
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple",
                               required: true %>
            </div>
          </div>
        </div>
        <!-- Startup Information -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Tell us about your startup</h3>
          <div class="grid grid-cols-1 gap-6">
            <div>
              <%= f.label :startup_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :startup_name,
                               placeholder: "Your startup's name",
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple",
                               required: true %>
            </div>
            <div>
              <%= f.label :startup_bio, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :startup_bio,
                              rows: 3,
                              placeholder: "Tell us briefly about your startup",
                              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple",
                              required: true,
                              maxlength: 1000 %>
              <p class="mt-1 text-sm text-gray-500">Maximum 1000 characters</p>
            </div>
            <div>
              <%= f.label :target_market, "Target market – demographics", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :target_market,
                              rows: 2,
                              placeholder: "Describe your target market and customer demographics",
                              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple",
                              required: true %>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= f.label :startup_stage, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.select :startup_stage,
                             [["Idea", "idea"], ["MVP", "mvp"], ["Early traction", "early_traction"], ["Growth", "growth"], ["Scaling", "scaling"]],
                             { prompt: "Select stage" },
                             { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple", required: true } %>
              </div>
              <div>
                <%= f.label :startup_industry, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :startup_industry,
                                 placeholder: "e.g., Fintech, Healthtech, Edtech",
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple",
                                 required: true %>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= f.label :funding_structure, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.select :funding_structure,
                             [["Bootstrapped", "bootstrapped"], ["Pre-seed", "pre_seed"], ["Series A", "series_a"], ["Grants", "grants"], ["Other", "other"]],
                             { prompt: "Select funding structure" },
                             { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple", required: true } %>
              </div>
              <div>
                <%= f.label :total_funding, "Total funding raised", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :total_funding,
                                 placeholder: "e.g., $50,000, $250K",
                                 class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple" %>
              </div>
            </div>
          </div>
        </div>
        <!-- Mentorship Needs -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">What do you need help with?</h3>
          <div class="space-y-6">
            <div>
              <%= f.label :mentorship_needs, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :mentorship_needs,
                              rows: 4,
                              placeholder: "What areas would you like mentorship on?",
                              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple",
                              required: true,
                              maxlength: 1000 %>
              <p class="mt-1 text-sm text-gray-500">Maximum 1000 characters</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= f.label :top_mentorship_areas, "Top 3 areas where mentorship is needed", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.select :top_mentorship_areas,
                             [["Go-to-market", "go_to_market"], ["Fundraising", "fundraising"], ["Branding", "branding"], ["Legal", "legal"], ["Team building", "team_building"], ["Other", "other"]],
                             { prompt: "Select areas (you can choose multiple)" },
                             { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple", multiple: true, required: true } %>
              </div>
              <div>
                <%= f.label :preferred_mentorship_mode, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.select :preferred_mentorship_mode,
                             [["One-on-one", "one_on_one"], ["Group", "group"], ["Virtual", "virtual"], ["In-person", "in_person"], ["Other", "other"]],
                             { prompt: "Select preferred mode" },
                             { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple", required: true } %>
              </div>
            </div>
          </div>
        </div>
        <!-- Commitment Length -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Partnership Duration</h3>
          <div>
            <%= f.label :commitment_length, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :commitment_length,
                         [["3 months", "3_months"], ["6 months", "6_months"], ["12 months", "12_months"]],
                         { prompt: "Select commitment length" },
                         { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-nailab-purple focus:border-nailab-purple", required: true } %>
            <p class="mt-1 text-sm text-gray-500">How long would you like this mentorship partnership to last?</p>
          </div>
        </div>
        <div class="flex space-x-4">
          <%= link_to "← Back to Options",
                      mentorship_select_type_path,
                      class: "flex-1 bg-gray-200 text-gray-700 py-3 px-4 rounded-md hover:bg-gray-300 transition-colors font-medium text-center" %>
          <%= f.submit "Submit Partnership Request",
                       class: "flex-1 bg-nailab-teal text-white py-3 px-4 rounded-md hover:bg-nailab-teal-dark transition-colors font-medium" %>
        </div>
      <% end %>
    </div>
    <div class="mt-6 bg-green-50 border border-green-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800">Ongoing Partnership Benefits</h3>
          <div class="mt-2 text-sm text-green-700">
            <ul class="list-disc list-inside space-y-1">
              <li>Regular check-ins and progress reviews</li>
              <li>Strategic guidance tailored to your startup's growth</li>
              <li>Access to mentor's network and resources</li>
              <li>3-6 month commitment for meaningful impact</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
