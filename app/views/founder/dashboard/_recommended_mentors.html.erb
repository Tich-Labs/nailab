<div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
  <div class="card-body">
    <div class="flex items-center justify-between mb-3">
      <h2 class="card-title text-xl text-nailab-purple">Recommended Mentors</h2>
      <div class="mask mask-squircle w-10 h-10 bg-nailab-teal/10 flex items-center justify-center">
        <svg aria-hidden="true" class="w-5 h-5 text-nailab-teal" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
    </div>
    <div class="divider my-2"></div>
    <div class="space-y-2">
      <% @recommended_mentors.each do |mentor| %>
        <div class="card card-compact bg-base-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="card-body p-3">
            <div class="flex items-center justify-between gap-2">
              <h3 class="card-title text-sm text-nailab-purple"><%= mentor.name || 'Unknown Mentor' %></h3>
              <%= link_to 'View', founder_mentor_path(mentor), class: 'btn btn-xs btn-outline flex-shrink-0' %>
            </div>
            <p class="text-xs text-base-content/70"><%= mentor.expertise&.first(2)&.join(', ') || 'No specialties listed' %></p>
            <% if mentor.company.present? %>
              <div class="badge badge-outline badge-xs"><%= mentor.company %></div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-actions justify-end mt-3">
      <%= link_to founder_mentorship_path, class: 'btn btn-xs btn-outline' do %>
        All Mentors â†’
      <% end %>
    </div>
  </div>
</div>