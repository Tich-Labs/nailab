<div class="max-w-3xl mx-auto">
  <h1 class="text-2xl font-semibold mb-4">Notifications</h1>

  <% if @notifications.any? %>
      <div id="notifications-preview">
        <ul class="space-y-3">
      <% @notifications.each do |n| %>
        <li class="p-3 rounded border <%= 'bg-gray-50' unless n.read? %>">
          <div class="flex items-start justify-between">
            <div>
              <p class="font-semibold"><%= n.title.presence || n.notif_type %></p>
              <p class="text-sm text-gray-700"><%= n.message %></p>
              <% if n.link.present? %>
                <p class="mt-2"><%= link_to 'View', n.link, class: 'text-indigo-600 hover:underline' %></p>
              <% end %>
            </div>
            <div class="text-xs text-gray-500"><%= time_ago_in_words(n.created_at) %> ago</div>
          </div>
        </li>
      <% end %>
        </ul>
      </div>
    </ul>
  <% else %>
    <p class="text-gray-600">You have no notifications.</p>
  <% end %>
</div>
