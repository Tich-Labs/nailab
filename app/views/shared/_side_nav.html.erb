<%# app/views/shared/_side_nav.html.erb %>
<aside data-controller="sidebar" class="fixed inset-y-0 left-0 z-40 w-64 bg-[#6A1B9A] text-white flex flex-col transition-transform duration-300 transform -translate-x-full md:translate-x-0 md:static md:inset-auto md:w-64">
  <!-- Mobile overlay -->
  <div data-sidebar-target="overlay" class="fixed inset-0 z-30 bg-black/40 backdrop-blur-sm transition-opacity duration-300 md:hidden" style="display:none;" onclick="this.previousElementSibling.controller.close()"></div>
  <div class="flex items-center justify-center h-20 border-b border-white/10">
    <%= link_to root_path, class: "flex items-center" do %>
      <%= image_tag "logo1.og.original.png", alt: "Nailab", class: "h-10 w-auto" %>
    <% end %>
    <span class="ml-2 text-xl font-bold tracking-tight hidden md:inline">Admin</span>
  </div>
  <nav class="flex-1 overflow-y-auto py-6 px-4 space-y-2">
    <% if current_user&.mentor? %>
      <%= render partial: 'shared/side_nav_links', locals: { role: :mentor } %>
    <% elsif current_user&.founder? %>
      <%= render partial: 'shared/side_nav_links', locals: { role: :founder } %>
    <% end %>
    <%= render partial: 'shared/side_nav_links', locals: { role: :common } %>
  </nav>
</aside>
