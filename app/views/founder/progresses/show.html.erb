<%# app/views/founder/progresses/show.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Progress Tracker</h1>
    <p class="text-xl text-gray-600">Monitor your startup's milestones and key metrics</p>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Milestones -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold text-white">Milestones</h2>
          <%= link_to 'Add Milestone', new_founder_milestone_path, class: "inline-flex items-center px-4 py-2 bg-white/20 text-white text-sm font-semibold rounded-lg hover:bg-white/30 transition-all" %>
        </div>
      </div>
      <div class="p-8">
        <div class="space-y-6">
          <% @milestones.each do |milestone| %>
            <div class="flex items-start justify-between p-6 bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl hover:from-purple-100 hover:to-teal-100 transition-all">
              <div class="flex-1">
                <div class="flex items-center space-x-3 mb-2">
                  <h3 class="text-lg font-semibold text-gray-900"><%= milestone.title %></h3>
                  <span class="px-3 py-1 text-xs rounded-full <%= milestone.completed ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= milestone.completed ? 'Completed' : 'Pending' %>
                  </span>
                </div>
                <p class="text-gray-600 mb-3"><%= milestone.description %></p>
                <div class="flex items-center space-x-4 text-sm text-gray-500">
                  <span>Due: <%= milestone.due_date.strftime('%B %d, %Y') %></span>
                  <span class="px-2 py-1 bg-gray-100 rounded-full"><%= milestone.category %></span>
                </div>
              </div>
              <div class="flex space-x-2 ml-4">
                <%= link_to 'Edit', edit_founder_milestone_path(milestone), class: "text-purple-600 hover:text-purple-800 text-sm font-medium" %>
              </div>
            </div>
          <% end %>
        </div>
        <% if @milestones.empty? %>
          <div class="text-center py-12">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No milestones yet</h3>
            <p class="text-gray-600 mb-6">Start tracking your progress by adding your first milestone.</p>
            <%= link_to 'Create your first milestone', new_founder_milestone_path, class: "inline-flex items-center px-6 py-3 bg-teal-600 text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-teal-700 transition-all" %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Monthly Metrics -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-teal-600 to-purple-600 px-8 py-6">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold text-white">Monthly Metrics</h2>
          <%= link_to 'Add Metrics', new_founder_monthly_metric_path, class: "inline-flex items-center px-4 py-2 bg-white/20 text-white text-sm font-semibold rounded-lg hover:bg-white/30 transition-all" %>
        </div>
      </div>
      <div class="p-8">
        <div class="space-y-6">
          <% @monthly_metrics.each do |metric| %>
            <div class="p-6 bg-gradient-to-r from-teal-50 to-purple-50 rounded-xl">
              <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= metric.month.strftime('%B %Y') %></h3>
              <div class="grid grid-cols-2 gap-4">
                <div class="text-center">
                  <p class="text-2xl font-bold text-teal-600">$<%= number_with_delimiter(metric.revenue) %></p>
                  <p class="text-sm text-gray-600">Revenue</p>
                </div>
                <div class="text-center">
                  <p class="text-2xl font-bold text-purple-600"><%= number_with_delimiter(metric.users) %></p>
                  <p class="text-sm text-gray-600">Users</p>
                </div>
              </div>
              <div class="mt-4 flex justify-end">
                <%= link_to 'Edit', edit_founder_monthly_metric_path(metric), class: "text-teal-600 hover:text-teal-800 text-sm font-medium" %>
              </div>
            </div>
          <% end %>
        </div>
        <% if @monthly_metrics.empty? %>
          <div class="text-center py-12">
            <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No metrics recorded</h3>
            <p class="text-gray-600 mb-6">Start tracking your key performance indicators.</p>
            <%= link_to 'Add your first metrics', new_founder_monthly_metric_path, class: "inline-flex items-center px-6 py-3 bg-purple-600 text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-purple-700 transition-all" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>