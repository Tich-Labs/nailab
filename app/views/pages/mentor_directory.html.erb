<div class="bg-base-200">
  <% mentor_active_filters = [@filters[:sector], @filters[:location], @filters[:pro_bono]].compact.reject(&:empty?).size %>
  <%= form_with url: mentors_path, method: :get, local: true, class: 'space-y-6' do |form| %>
    <section class="py-20 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4 text-center">Find Your Mentor</h1>
        <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto mb-10">
          Connect with experienced founders, operators, and investors ready to help you scale in Africa.
        </p>
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <span class="absolute inset-y-0 left-4 flex items-center text-slate-400">
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="none" aria-hidden="true">
                <path d="M8.5 2a6.5 6.5 0 014.845 10.785l3.935 3.936a1 1 0 01-1.414 1.414L11.93 14.2A6.5 6.5 0 118.5 2zm0 2a4.5 4.5 0 100 9 4.5 4.5 0 000-9z" fill="currentColor"></path>
              </svg>
            </span>
            <%= form.text_field :q, value: @filters[:search], placeholder: 'Search by name, expertise, or organization...', class: 'w-full rounded-2xl border border-gray-300 bg-white/90 px-12 py-4 text-sm text-slate-700 shadow-lg focus:border-teal-500 focus:outline-none focus:ring-2 focus:ring-teal-200' %>
          </div>
        </div>
      </div>
    </section>
    <section class="py-8 border-b border-gray-200 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-6">
        <div class="flex flex-wrap items-center gap-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-gray-300 text-sm font-semibold text-gray-700">
            Filters
            <% if mentor_active_filters.positive? %>
              <span class="px-2 py-0.5 bg-nailab-teal text-white text-xs rounded-full"><%= mentor_active_filters %></span>
            <% end %>
          </span>
          <%= link_to 'Clear filters', mentors_path, class: 'text-sm text-gray-600 hover:text-gray-900' if mentor_active_filters.positive? %>
        </div>
        <div class="grid md:grid-cols-3 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Sector</label>
            <%= form.select :sector, options_for_select([['All sectors', '']] + @sector_options.map { |sector| [sector, sector] }, @filters[:sector]), {}, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500' %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
            <%= form.text_field :location, value: @filters[:location], placeholder: 'e.g., Nairobi, Cape Town', class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500' %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Session type</label>
            <%= form.select :pro_bono, options_for_select([['All mentors', ''], ['Pro bono only', 'true'], ['Paid sessions', 'false']], @filters[:pro_bono]), {}, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500' %>
          </div>
        </div>
        <div class="flex flex-wrap items-center gap-3">
          <button type="submit" class="px-6 py-3 bg-nailab-teal text-white rounded-xl font-semibold shadow-lg hover:bg-nailab-teal transition-colors">
            Apply filters
          </button>
          <% if mentor_active_filters.positive? %>
            <%= link_to 'Reset filters', mentors_path, style: 'color: #7C3AED;', class: 'text-sm hover:opacity-80' %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap items-center justify-between mb-6 gap-4">
        <p class="text-sm text-gray-500"><%= @filtered_mentors.count %> mentor<%= 's' unless @filtered_mentors.count == 1 %> available</p>
        <% if mentor_active_filters.positive? || @filters[:search].present? %>
          <%= link_to 'Remove filters', mentors_path, style: 'color: #7C3AED;', class: 'text-sm font-semibold hover:opacity-80' %>
        <% end %>
      </div>
      <% if @filtered_mentors.any? %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @filtered_mentors.each do |mentor| %>
            <div class="card bg-base-100 shadow-xl flex flex-col h-full">
              <div class="card-body p-6 flex flex-col h-full">
                <div class="flex items-start gap-4 mb-4">
                  <div class="avatar">
                    <div class="w-16 h-16 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden flex items-center justify-center">
                      <%= image_tag(mentor.photo_url.presence || 'https://images.unsplash.com/photo-1544723795-3fb6469f5b39?auto=format&fit=crop&w=200&q=80', alt: mentor.full_name, class: 'w-full h-full object-cover') %>
                    </div>
                  </div>
                  <div class="flex-1">
                    <h3 class="card-title text-lg font-bold text-base-content"><%= mentor.full_name %></h3>
                    <% if mentor.title.present? %>
                      <p class="text-sm text-base-content/70"><%= mentor.title %></p>
                    <% end %>
                    <% if mentor.organization.present? %>
                      <p class="text-xs text-base-content/50"><%= mentor.organization %></p>
                    <% end %>
                  </div>
                  <% if mentor.pro_bono %>
                    <span class="badge badge-success badge-outline px-2 py-1 text-xs font-semibold">Pro bono</span>
                  <% end %>
                </div>
                <p class="text-base-content/70 text-sm mb-4 line-clamp-3"><%= mentor.bio %></p>
                <div class="space-y-2 text-sm text-base-content/60 mb-4">
                  <% if mentor.location.present? %>
                    <div class="flex items-center gap-2">
                      <span class="w-2 h-2 rounded-full bg-nailab-purple"></span>
                      <span><%= mentor.location %></span>
                    </div>
                  <% end %>
                  <div class="flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-blue-500"></span>
                    <span><%= mentor.years_experience %> years experience</span>
                  </div>
                  <% if mentor.rate_per_hour.present? && mentor.pro_bono == false %>
                    <div class="flex items-center gap-2">
                      <span class="w-2 h-2 rounded-full bg-teal-500"></span>
                      <span>$<%= number_with_precision(mentor.rate_per_hour, precision: 0) %>/hr</span>
                    </div>
                  <% end %>
                </div>
                <% if mentor.sectors.present? %>
                  <div class="flex flex-wrap gap-2 mb-4">
                    <% mentor.sectors.each do |sector| %>
                      <span class="badge badge-ghost px-3 py-1 text-xs font-medium"><%= sector %></span>
                    <% end %>
                  </div>
                <% end %>
                <% if mentor.expertise.present? %>
                  <div class="text-sm font-semibold text-base-content mb-2">Expertise</div>
                  <ul class="space-y-1 text-sm text-base-content/70 mb-4">
                    <% mentor.expertise.first(4).each do |area| %>
                      <li class="flex items-center gap-2">
                        <span class="block w-1 h-1 rounded-full bg-nailab-teal"></span>
                        <span><%= area %></span>
                      </li>
                    <% end %>
                  </ul>
                <% end %>
                <div class="mt-auto">
                  <% if current_user %>
                    <%= link_to 'Request mentorship', founder_mentorship_path(request_mentor: mentor.user_id), class: 'btn w-full font-semibold', style: 'background-color: #923f99; color: #fff;' %>
                  <% else %>
                    <%= link_to 'Request mentorship', new_user_session_path, data: { return_to: founder_mentorship_path(request_mentor: mentor.user_id) }, class: 'btn w-full font-semibold', style: 'background-color: #923f99; color: #fff;' %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center py-16">
          <div class="card bg-base-100 shadow-lg p-8 max-w-md w-full">
            <div class="card-body items-center text-center">
              <svg class="w-12 h-12 text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <p class="text-xl text-base-content/60 mb-4">No mentors match your criteria.</p>
              <%= link_to 'Clear filters', mentors_path, class: 'btn btn-outline mt-2', style: 'border-color: #f2ebf3; color: #fff;' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>