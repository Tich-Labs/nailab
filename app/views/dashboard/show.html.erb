<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Welcome back, <%= current_user.email %>!</h1>
      <p class="mt-2 text-gray-600">Here's your mentorship dashboard</p>
    </div>
    <!-- Status Banner -->
    <% if @pending_requests.any? %>
      <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Mentorship Request Pending Review</h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p>Your mentorship request is being reviewed. We'll notify you once a mentor is assigned.</p>
            </div>
          </div>
        </div>
      </div>
    <% elsif @approved_requests.any? %>
      <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-green-800">Mentorship Active!</h3>
            <div class="mt-2 text-sm text-green-700">
              <p>Congratulations! Your mentorship request has been approved. Check your email for next steps.</p>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="mb-6 bg-blue-50 border border-blue-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Ready to Start Your Journey?</h3>
            <div class="mt-2 text-sm text-blue-700">
              <p><%= link_to "Request mentorship", mentorship_select_type_path, class: "font-medium underline text-blue-700 hover:text-blue-600" %> to connect with experienced mentors who can guide your startup.</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Profile Summary -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Profile Summary</h2>
        <div class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="text-sm text-gray-900"><%= current_user.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Member since</dt>
            <dd class="text-sm text-gray-900"><%= current_user.created_at.strftime("%B %Y") %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Requests submitted</dt>
            <dd class="text-sm text-gray-900"><%= @mentorship_requests.count %></dd>
          </div>
        </div>
        <div class="mt-4">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "text-nailab-purple hover:text-nailab-teal text-sm font-medium" %>
        </div>
      </div>
      <!-- Mentorship Requests -->
      <div class="lg:col-span-2 bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Your Mentorship Requests</h2>
        <% if @mentorship_requests.empty? %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No requests yet</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by requesting mentorship.</p>
            <div class="mt-6">
              <%= link_to "Request Mentorship", mentorship_select_type_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-nailab-purple hover:bg-nailab-purple-dark" %>
            </div>
          </div>
        <% else %>
          <div class="space-y-4">
            <% @mentorship_requests.each do |request| %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <h3 class="text-sm font-medium text-gray-900">
                      <%= request.request_type.titleize %> Mentorship
                    </h3>
                    <p class="text-sm text-gray-500">
                      Submitted <%= request.created_at.strftime("%B %d, %Y") %>
                    </p>
                    <% if request.one_time? %>
                      <p class="text-sm text-gray-600 mt-1">
                        Topic: <%= request.topic %>
                      </p>
                    <% else %>
                      <p class="text-sm text-gray-600 mt-1">
                        Startup: <%= request.startup_name %>
                      </p>
                    <% end %>
                  </div>
                  <div class="ml-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case request.status
                          when 'pending' then 'bg-yellow-100 text-yellow-800'
                          when 'approved' then 'bg-green-100 text-green-800'
                          when 'rejected' then 'bg-red-100 text-red-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= request.status.titleize %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Quick Actions -->
    <div class="mt-8 bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to mentorship_select_type_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50" do %>
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-nailab-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-900">Request New Mentorship</h3>
            <p class="text-sm text-gray-500">Start a new mentorship relationship</p>
          </div>
        <% end %>
        <%= link_to mentors_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50" do %>
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-nailab-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-900">Browse Mentors</h3>
            <p class="text-sm text-gray-500">Explore available mentors</p>
          </div>
        <% end %>
        <%= link_to blog_posts_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50" do %>
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-nailab-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-sm font-medium text-gray-900">Read Resources</h3>
            <p class="text-sm text-gray-500">Access our knowledge base</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
