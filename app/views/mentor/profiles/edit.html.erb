<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md p-6">
  <h1 class="text-2xl font-semibold text-gray-900">Edit Profile</h1>
  <p class="text-gray-600 mt-2">Update your profile information and preferences below.</p>
  <%= form_with model: @mentor_profile, url: mentor_profile_path, method: :patch, local: false, html: { id: 'mentor-profile-form' } do |form| %>
    <div class="mt-4">
      <%= form.label :full_name, 'Full Name', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :full_name, class: 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500' %>
    </div>
    <div class="mt-4">
      <%= form.label :title, 'Title', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :title, class: 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500' %>
    </div>
    <div class="mt-4">
      <%= form.label :bio, 'Bio', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_area :bio, rows: 5, class: 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500' %>
    </div>
    <div class="mt-4">
      <%= form.label :location, 'Location (City, Country)', class: 'block text-sm font-medium text-gray-700' %>
      <div class="grid grid-cols-2 gap-4 mt-1">
        <%= form.text_field :city, placeholder: 'City', class: 'block w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500' %>
        <%= form.text_field :country, placeholder: 'Country', class: 'block w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500' %>
      </div>
    </div>
    <div class="mt-4">
      <%= form.label :professional_website, 'Website', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.url_field :professional_website, class: 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500' %>
    </div>
    <div class="mt-4">
      <%= form.submit 'Save Changes', class: 'px-4 py-2 bg-nailab-teal text-white rounded-lg hover:bg-nailab-teal' %>
    </div>
  <% end %>
</div>

<div id="ajax-flash" class="fixed top-6 right-6 z-50"></div>