<% content_for :title, "Invite Team Member | Nailab" %>
<div class="mb-8">
  <h1 class="text-4xl lg:text-5xl font-bold text-nailab-purple mb-4">Invite a Team Member</h1>
  <p class="text-xl text-base-content/60">Send an invitation to add a co-founder or team member to your startup.</p>
</div>
<div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-6">

  <%= form_with model: @invite, url: founder_startup_invites_path, local: true do |f| %>
    <%= f.hidden_field :startup_id, value: @startup.id %>
    <div class="grid grid-cols-1 gap-4">
      <div>
        <%= f.label :invitee_name, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :invitee_name, class: 'input input-bordered w-full' %>
      </div>
      <div>
        <%= f.label :invitee_email, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.email_field :invitee_email, required: true, class: 'input input-bordered w-full' %>
      </div>
      <div>
        <%= f.label :role, 'Role', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.select :role, StartupInvite.roles.keys.map { |r| [r.humanize.titleize, r] }, {}, class: 'select select-bordered w-full' %>
      </div>
    </div>
    <div class="mt-6 flex justify-end gap-3">
      <%= link_to 'Cancel', founder_startup_profile_path, class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50' %>
      <%= f.submit 'Send Invite', class: 'inline-flex items-center px-6 py-3 border-2 border-nailab-teal text-nailab-purple bg-white text-lg font-semibold rounded-xl shadow-lg hover:bg-gray-50 transition-colors' %>
    </div>
  <% end %>
</div>
