<%# app/views/mentor_onboarding/steps/_basic_details.html.erb %>
<div class="p-8">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Basic Details</h2>
    <p class="text-gray-600">Tell us about yourself to get started</p>
  </div>
  <%= form_with model: @profile, url: mentor_onboarding_path(step: 'basic_details'), method: :put, id: 'mentor-onboarding-form', class: 'space-y-6' do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :save_and_exit, '', id: 'save-and-exit-field' %>
    <div>
      <%= f.label :full_name, class: 'block text-sm font-medium text-slate-600 mb-2' %>
      <%= f.text_field :full_name, required: true,
                       class: 'w-full px-4 py-3 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-purple-300 focus:border-purple-500',
                       placeholder: 'Enter your full name' %>
      <% if @profile.errors[:full_name].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @profile.errors[:full_name].first %></p>
      <% end %>
    </div>
    <div>
      <%= f.label :title, 'Current role / job title', class: 'block text-sm font-medium text-slate-600 mb-2' %>
      <%= f.text_field :title, required: true,
                       class: 'w-full px-4 py-3 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-purple-300 focus:border-purple-500',
                       placeholder: 'e.g., Founder & CEO, Investment Analyst, Marketing Consultant' %>
      <% if @profile.errors[:title].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @profile.errors[:title].first %></p>
      <% end %>
    </div>
    <div>
      <%= f.label :bio, 'Short professional bio', class: 'block text-sm font-medium text-slate-600 mb-2' %>
      <%= f.text_area :bio, required: true, rows: 4,
                      class: 'w-full px-4 py-3 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-purple-300 focus:border-purple-500',
                      placeholder: '2–3 sentences: background, relevant experience, passion' %>
      <p class="mt-1 text-sm text-gray-500">150–500 characters recommended</p>
      <% if @profile.errors[:bio].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @profile.errors[:bio].first %></p>
      <% end %>
    </div>
  <% end %>
</div>