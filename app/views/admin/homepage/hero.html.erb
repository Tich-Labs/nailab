<h1 class="text-2xl font-bold mb-4">Hero Section â€” Editor & Preview</h1>

<div class="grid grid-cols-2 gap-8 mb-6">
  <div>
    <h2 class="font-semibold mb-3">Editor</h2>
    <div class="bg-white p-4 rounded shadow">
      <%= form_with url: admin_homepage_hero_update_path, method: :patch, local: true do %>
        <p class="text-sm text-slate-600 mb-4">Update the hero heading, copy, image, and CTA links that appear on the landing section.</p>
        <div class="mb-3">
          <%= label_tag 'hero_title', 'Heading', class: 'block font-medium' %>
          <%= text_field_tag 'hero[title]', @hero_content[:title], id: 'hero_title', class: 'w-full form-input admin-form-input' %>
        </div>
        <div class="mb-3">
          <%= label_tag 'hero_subtitle', 'Body copy', class: 'block font-medium' %>
          <%= text_area_tag 'hero[subtitle]', @hero_content[:subtitle], id: 'hero_subtitle', class: 'w-full form-input admin-form-input', rows: 3 %>
        </div>
        <div class="mb-3">
          <%= label_tag 'hero_image_url', 'Image URL', class: 'block font-medium' %>
          <%= text_field_tag 'hero[image_url]', @hero_content[:image_url], id: 'hero_image_url', class: 'w-full form-input admin-form-input' %>
        </div>
        <div class="grid grid-cols-2 gap-4 mb-3">
          <div>
            <%= label_tag 'hero_cta_text', 'Primary CTA label', class: 'block font-medium' %>
            <%= text_field_tag 'hero[cta_text]', @hero_content[:cta_text], id: 'hero_cta_text', class: 'w-full form-input admin-form-input' %>
          </div>
          <div>
            <%= label_tag 'hero_cta_link', 'Primary CTA link', class: 'block font-medium' %>
            <%= text_field_tag 'hero[cta_link]', @hero_content[:cta_link], id: 'hero_cta_link', class: 'w-full form-input admin-form-input' %>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4 mb-3">
          <div>
            <%= label_tag 'hero_secondary_label', 'Secondary CTA label', class: 'block font-medium' %>
            <%= text_field_tag 'hero[secondary_cta][label]', @hero_content.dig(:secondary_cta, :label), id: 'hero_secondary_label', class: 'w-full form-input admin-form-input' %>
          </div>
          <div>
            <%= label_tag 'hero_secondary_link', 'Secondary CTA link', class: 'block font-medium' %>
            <%= text_field_tag 'hero[secondary_cta][link]', @hero_content.dig(:secondary_cta, :link), id: 'hero_secondary_link', class: 'w-full form-input admin-form-input' %>
          </div>
        </div>
        <div class="flex gap-3">
          <%= submit_tag 'Save hero', class: 'btn btn-primary' %>
          <%= link_to 'Preview live section', root_path(anchor: 'hero'), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <h2 class="font-semibold mb-3">Preview</h2>
    <div class="bg-white p-6 rounded shadow space-y-5">
      <%# Render frontend hero partial for WYSIWYG preview. Ensure preview data is available via @hero_slides/@preview_hero %>
      <%= render 'pages/home/hero' %>
      <div class="space-y-3">
        <div class="text-center">
          <p class="text-2xl font-bold text-slate-800">1031</p>
          <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Startup Founders</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-slate-800">50</p>
          <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Active Mentors</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-slate-800">$250M</p>
          <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Combined Startup Valuation</p>
        </div>
      </div>
      <p class="text-xs text-slate-500">Image-only hero; carousel support will ship later.</p>
    </div>
  </div>
</div>
