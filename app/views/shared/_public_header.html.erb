<%# app/views/shared/_public_header.html.erb %>
<header class="bg-white shadow-sm border-b border-gray-200 relative z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center py-4">
          <img src="https://nailab-static.s3.eu-north-1.amazonaws.com/images/logo1.og.original.png" alt="logo1.og" class="h-12 md:h-16 w-auto">
        </a>
      </div>
      <!-- Main Navigation -->
      <nav class="hidden md:flex space-x-8">
        <% network_active = request.path.start_with?(startups_path) || request.path.start_with?(mentors_path) %>
        <div class="relative" data-controller="dropdown">
          <button type="button" data-action="click->dropdown#toggle" class="inline-flex items-center gap-1 transition-colors px-3 py-2 text-base font-medium w-full #{network_active ? 'text-nailab-teal' : 'text-gray-700 hover:text-nailab-teal'}">
            Our Network
            <span class="text-xs">▼</span>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-[9999]">
            <%= link_to 'Startups', startups_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors #{'bg-teal-50 text-nailab-teal font-semibold' if request.path == startups_path}" %>
            <%= link_to 'Mentors', mentors_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors #{'bg-teal-50 text-nailab-teal font-semibold' if request.path == mentors_path}" %>
          </div>
        </div>
        <%= link_to 'Programs', programs_path, class: "text-gray-700 hover:text-nailab-teal px-3 py-2 text-base font-medium transition-colors #{request.path.start_with?(programs_path) ? 'text-nailab-teal' : ''}" %>
        <% current_resource_slug = params[:category].presence || @selected_category.presence || @resource_category_slug.presence || 'all' %>
        <% resources_active = request.path.start_with?(resources_path) %>
        <div class="relative" data-controller="dropdown">
          <button type="button" data-action="click->dropdown#toggle" class="inline-flex items-center gap-1 transition-colors px-3 py-2 text-base font-medium w-full #{resources_active ? 'text-nailab-teal' : 'text-gray-700 hover:text-nailab-teal'}">
            Resources
            <span class="text-xs">▼</span>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute top-full left-0 mt-2 w-72 bg-white rounded-lg shadow-lg border border-gray-200 z-[9999]">
            <%= link_to 'Blogs', resources_category_path(category: 'blogs'), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors #{'bg-teal-50 text-nailab-teal font-semibold' if current_resource_slug == 'blogs'}" %>
            <%= link_to 'Knowledge Hub', resources_category_path(category: 'knowledge-hub'), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors #{'bg-teal-50 text-nailab-teal font-semibold' if current_resource_slug == 'knowledge-hub'}" %>
            <%= link_to 'Opportunities', resources_category_path(category: 'opportunities'), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors #{'bg-teal-50 text-nailab-teal font-semibold' if current_resource_slug == 'opportunities'}" %>
            <%= link_to 'Events & Webinars', resources_category_path(category: 'events'), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors #{'bg-teal-50 text-nailab-teal font-semibold' if current_resource_slug == 'events'}" %>
          </div>
        </div>
        <%= link_to 'Pricing', pricing_path, class: "text-gray-700 hover:text-nailab-teal px-3 py-2 text-base font-medium transition-colors #{current_page?(pricing_path) ? 'text-nailab-teal' : ''}" %>
        <%= link_to 'Contact', contact_path, class: "text-gray-700 hover:text-nailab-teal px-3 py-2 text-base font-medium transition-colors #{current_page?(contact_path) ? 'text-nailab-teal' : ''}" %>
      </nav>
      <!-- Right Side Actions -->
      <div class="flex items-center space-x-4">
        <%# Hide logged-in UI when showing onboarding flows to guests */ %>
        <% onboarding_paths = ['/founder_onboarding','/mentor_onboarding','/partner_onboarding'] %>
        <% on_onboarding = onboarding_paths.any? { |p| request.path.start_with?(p) } %>
        <% if user_signed_in? %>
          <!-- Logged In State -->
          <% if current_user.user_profile&.role == 'mentor' %>
            <%= link_to 'Go to Dashboard', mentor_root_path, class: "bg-nailab-teal text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-nailab-teal transition-colors" %>
          <% else %>
            <%= link_to 'Go to Dashboard', founder_root_path, class: "bg-nailab-teal text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-nailab-teal transition-colors" %>
          <% end %>
          <!-- User Dropdown -->
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" class="flex items-center space-x-2 text-gray-700 hover:text-gray-900">
              <div class="w-8 h-8 bg-teal-100 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-nailab-teal">
                  <%= current_user.user_profile&.full_name&.first || current_user.email.first.upcase %>
                </span>
              </div>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
              <%= link_to 'Account Settings', founder_account_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-t-lg" %>
              <%= button_to 'Log Out', destroy_user_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-b-lg" %>
            </div>
          </div>
        <% elsif !on_onboarding %>
          <!-- Logged Out State -->
              <%= link_to 'Log in', new_user_session_path, class: "font-semibold text-white px-4 py-2 rounded-lg text-sm font-medium transition-opacity hover:opacity-90 bg-nailab-purple" %>
        <% else %>
          <!-- During onboarding (guest) always show Log in -->
          <%= link_to 'Log in', new_user_session_path, class: "font-semibold text-white px-4 py-2 rounded-lg text-sm font-medium transition-opacity hover:opacity-90 bg-nailab-purple" %>
        <% end %>
        <!-- Mobile menu button -->
        <div data-controller="mobile-menu" class="md:hidden relative">
          <button data-action="click->mobile-menu#toggle" type="button" class="p-2 rounded-md text-gray-700 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-teal-500 transition-colors duration-200">
            <svg data-mobile-menu-target="icon" class="w-6 h-6 transition-transform duration-300 ease-in-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path data-mobile-menu-target="topLine" class="transition-all duration-300 ease-in-out" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16"/>
              <path data-mobile-menu-target="middleLine" class="transition-all duration-300 ease-in-out" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 12h16"/>
              <path data-mobile-menu-target="bottomLine" class="transition-all duration-300 ease-in-out" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 18h16"/>
            </svg>
          </button>
          <div data-mobile-menu-target="menu" class="hidden absolute right-0 mt-2 w-64 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
            <%= link_to 'Home', root_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to 'Programs', programs_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to 'Startups', startups_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to 'Mentors', mentors_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to 'Resources', resources_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to 'Pricing', pricing_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to 'Contact', contact_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <% if user_signed_in? && !on_onboarding %>
              <%= link_to 'Dashboard', (current_user.user_profile&.role == 'mentor' ? mentor_root_path : founder_root_path), class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
              <%= link_to 'Account Settings', founder_account_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
              <%= button_to 'Log Out', destroy_user_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <% else %>
              <%= link_to 'Log in', new_user_session_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
