<%# app/views/founder/support/show.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 space-y-10">
  <div class="space-y-2">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900">Support Center</h1>
    <p class="text-xl text-gray-600">Raise a ticket, consult the FAQ, or review your recent submissions.</p>
  </div>
  <% if notice %>
    <div class="rounded-2xl border border-teal-200 bg-teal-50 px-6 py-4 text-teal-900">
      <%= notice %>
    </div>
  <% end %>
  <% if alert %>
    <div class="rounded-2xl border border-red-200 bg-red-50 px-6 py-4 text-red-900">
      <%= alert %>
    </div>
  <% end %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
    <!-- Contact Support -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
        <h2 class="text-2xl font-bold text-white">Contact Support</h2>
      </div>
      <div class="p-8">
        <div class="space-y-6">
          <div class="flex items-center space-x-4 p-4 bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Phone Support</h3>
              <p class="text-gray-600">1-800-STARTUP (Mon-Fri, 9AM-6PM EST)</p>
            </div>
          </div>
          <div class="flex items-center space-x-4 p-4 bg-gradient-to-r from-teal-50 to-purple-50 rounded-xl">
            <div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-teal-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Email Support</h3>
              <p class="text-gray-600">support@nailab.com</p>
            </div>
          </div>
          <div class="flex items-center space-x-4 p-4 bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Live Chat</h3>
              <p class="text-gray-600">Available 24/7 for premium members</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- FAQ -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-teal-600 to-purple-600 px-8 py-6 flex items-center justify-between">
        <h2 class="text-2xl font-bold text-white">Frequently Asked Questions</h2>
        <%= link_to 'Read more', contact_path(anchor: 'faq'), class: 'text-sm font-semibold text-white underline hover:text-teal-100' %>
      </div>
      <div class="p-8 space-y-6" data-controller="faq">
        <% faqs = [
          { q: 'How do I update my startup profile?', a: 'Go to Startup Profile in your dashboard and click "Edit Profile".' },
          { q: 'How do I schedule a mentorship session?', a: 'Browse available mentors and send a mentorship request from the Mentorship section.' },
          { q: 'How do I access premium resources?', a: 'Upgrade to a Pro or Enterprise plan to unlock premium content.' },
          { q: 'How do I connect with other founders?', a: 'Visit the Community section to find and connect with peers.' }
        ] %>
        <% faqs.each_with_index do |faq, idx| %>
          <div class="bg-gradient-to-r from-purple-50 to-teal-50 rounded-xl p-4">
            <button type="button" class="w-full flex items-center justify-between text-left font-semibold text-gray-900 text-lg focus:outline-none" data-action="click->faq#toggle" data-faq-target="button" data-faq-index="<%= idx %>">
              <span><%= faq[:q] %></span>
              <svg class="w-6 h-6 text-purple-600 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="mt-4 text-gray-700 text-base hidden" data-faq-target="answer">
              <%= simple_format(faq[:a]) %>
            </div>
          </div>
        <% end %>
        <div class="text-right">
          <%= link_to 'See the full FAQ on the contact page', contact_path(anchor: 'faq'), class: 'text-sm font-semibold text-teal-600 hover:text-teal-700' %>
        </div>
      </div>
    </div>
  </div>
  <!-- Submit a Ticket -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
      <h3 class="text-2xl font-bold text-white">Submit a Support Ticket</h3>
    </div>
    <div class="p-8">
      <%= form_with model: @support_ticket, url: founder_support_path, local: true, class: 'space-y-6' do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :subject, class: 'block text-sm font-semibold text-gray-900 mb-2' %>
            <%= f.text_field :subject, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent' %>
            <% if f.object.errors[:subject].any? %>
              <span class="text-xs text-red-600"><%= f.object.errors[:subject].join(', ') %></span>
            <% end %>
          </div>
          <div>
            <%= f.label :category, class: 'block text-sm font-semibold text-gray-900 mb-2' %>
            <%= f.select :category, ['Technical Issue', 'Account Problem', 'Billing Question', 'Feature Request', 'Other'], { prompt: 'Select a category' }, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent' %>
            <% if f.object.errors[:category].any? %>
              <span class="text-xs text-red-600"><%= f.object.errors[:category].join(', ') %></span>
            <% end %>
          </div>
        </div>
        <div>
          <%= f.label :description, class: 'block text-sm font-semibold text-gray-900 mb-2' %>
          <%= f.text_area :description, rows: 6, placeholder: 'Please describe your issue in detail...', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent' %>
          <% if f.object.errors[:description].any? %>
            <span class="text-xs text-red-600"><%= f.object.errors[:description].join(', ') %></span>
          <% end %>
        </div>
        <div class="flex justify-end">
          <%= f.submit 'Submit Ticket', class: 'inline-flex items-center px-8 py-4 bg-teal-600 text-white text-lg font-bold rounded-xl shadow-lg hover:bg-teal-700 transition-all' %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Ticket Tracking -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-teal-600 to-purple-600 px-8 py-6 flex items-center justify-between">
      <h3 class="text-2xl font-bold text-white">Track Submitted Tickets</h3>
      <%= link_to 'View all', '/admin/support_ticket', class: 'text-sm font-semibold text-white underline hover:text-teal-100' %>
    </div>
    <div class="p-8">
      <% if @support_tickets.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full text-left text-sm">
            <thead>
              <tr class="text-xs uppercase tracking-wide text-gray-500">
                <th class="px-4 py-3">Subject</th>
                <th class="px-4 py-3">Category</th>
                <th class="px-4 py-3">Status</th>
                <th class="px-4 py-3">Submitted</th>
                <th class="px-4 py-3">Updated</th>
              </tr>
            </thead>
            <tbody>
              <% @support_tickets.each do |ticket| %>
                <tr class="border-t border-gray-100">
                  <td class="px-4 py-3 font-semibold text-gray-900"><%= ticket.subject %></td>
                  <td class="px-4 py-3 text-gray-700"><%= ticket.category %></td>
                  <td class="px-4 py-3">
                    <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full <%= case ticket.status
                      when 'open' then 'bg-teal-50 text-teal-700 border border-teal-100'
                      when 'in_progress' then 'bg-yellow-50 text-yellow-700 border border-yellow-100'
                      when 'resolved' then 'bg-green-50 text-green-700 border border-green-100'
                      else 'bg-gray-50 text-gray-600 border border-gray-100' end %>">
                      <%= ticket.status.humanize %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-gray-600"><%= ticket.created_at.strftime('%b %d, %Y %I:%M %p') %></td>
                  <td class="px-4 py-3 text-gray-600"><%= ticket.updated_at.strftime('%b %d, %Y %I:%M %p') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-600 text-sm">You havenâ€™t submitted any support tickets yet. Use the form above to send us a request.</p>
      <% end %>
    </div>
  </div>
</div>