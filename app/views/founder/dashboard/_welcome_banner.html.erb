<section class="bg-gradient-to-br from-purple-600 via-teal-600 to-indigo-700 rounded-2xl p-8 lg:p-12 text-white shadow-xl relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <defs>
        <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
          <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect width="100" height="100" fill="url(#grid)" />
    </svg>
  </div>
  <div class="relative z-10 max-w-4xl">
    <div class="flex items-center space-x-3 mb-4">
      <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
        </svg>
      </div>
      <span class="text-white/80 font-medium">Welcome back</span>
    </div>
    <h1 class="text-4xl lg:text-5xl font-bold mb-4">
      <%= @user.user_profile&.full_name || @user.email %>!
    </h1>
    <p class="text-xl lg:text-2xl text-white/90 leading-relaxed mb-6">
      Your startup journey continues. Track progress, connect with mentors, and accelerate your growth.
    </p>
    <% if @startup_profile.blank? %>
      <div class="inline-flex items-center space-x-3 bg-white/20 backdrop-blur-sm rounded-lg px-4 py-3">
        <svg class="w-5 h-5 text-yellow-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
        </svg>
        <span class="font-medium">Complete your startup profile to unlock all features</span>
      </div>
    <% else %>
      <div class="flex flex-wrap gap-4">
        <div class="flex items-center space-x-2 bg-white/20 backdrop-blur-sm rounded-lg px-3 py-2">
          <div class="w-2 h-2 bg-green-400 rounded-full"></div>
          <span class="text-sm font-medium"><%= @milestones.where(completed: true).count %> milestones completed</span>
        </div>
        <div class="flex items-center space-x-2 bg-white/20 backdrop-blur-sm rounded-lg px-3 py-2">
          <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
          <span class="text-sm font-medium"><%= @user.monthly_metrics.count %> months tracked</span>
        </div>
      </div>
    <% end %>
  </div>
</section>