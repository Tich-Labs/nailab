<%= form_with(model: [:founder, @startup_update], local: true, class: "space-y-6") do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div>
      <label class="block text-sm font-medium text-gray-700">Month</label>
      <%= f.select :report_month, months_options, {}, class: "select select-bordered w-full bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Year</label>
      <%= f.select :report_year, years_options, {}, class: "select select-bordered w-full bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">MRR ($)</label>
      <%= f.number_field :mrr, step: 0.01, class: "input input-bordered w-full text-right bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">New Paying Customers</label>
      <%= f.number_field :new_paying_customers, class: "input input-bordered w-full text-right bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Churned Customers</label>
      <%= f.number_field :churned_customers, class: "input input-bordered w-full text-right bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Cash at Hand ($)</label>
      <%= f.number_field :cash_at_hand, step: 0.01, class: "input input-bordered w-full text-right bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Burn Rate ($/mo)</label>
      <%= f.number_field :burn_rate, step: 0.01, class: "input input-bordered w-full text-right bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700">Product Progress <span class="text-xs text-gray-500">(optional)</span></label>
      <%= f.text_area :product_progress, rows: 2, class: "textarea textarea-bordered w-full bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Funding Stage <span class="text-xs text-gray-500">(optional)</span></label>
      <%= f.text_field :funding_stage, class: "input input-bordered w-full bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Funds Raised ($) <span class="text-xs text-gray-500">(optional)</span></label>
      <%= f.number_field :funds_raised, step: 0.01, class: "input input-bordered w-full text-right bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Investors Engaged <span class="text-xs text-gray-500">(optional)</span></label>
      <%= f.text_field :investors_engaged, class: "input input-bordered w-full bg-white border border-gray-300 rounded p-2 focus:border-nailab-purple focus:ring-2 focus:ring-nailab-purple" %>
    </div>
  </div>
  <div class="pt-4 flex justify-end">
    <%= f.submit 'Submit Update', class: "btn btn-primary w-48" %>
  </div>
<% end %>