<div class="prose prose-lg max-w-none">
  <div class="space-y-6 text-gray-700 leading-relaxed">
    <% content_lines = @program.content.to_s.split("\n") %>
    <% content_lines.each do |line| %>
      <% stripped = line.strip %>
      <% if stripped.blank? %>
        <div class="h-2"></div>
      <% elsif stripped.start_with?("# ") %>
        <h1 class="text-3xl font-bold text-gray-900 mt-8 mb-4"><%= stripped.delete_prefix('# ') %></h1>
      <% elsif stripped.start_with?("## ") %>
        <h2 class="text-2xl font-bold text-gray-900 mt-6 mb-3"><%= stripped.delete_prefix('## ') %></h2>
      <% elsif stripped.start_with?("### ") %>
        <h3 class="text-xl font-bold text-gray-900 mt-4 mb-2"><%= stripped.delete_prefix('### ') %></h3>
      <% elsif stripped.start_with?('- ') %>
        <p class="ml-6 list-disc list-inside"><%= stripped.delete_prefix('- ') %></p>
      <% else %>
        <p class="text-base leading-relaxed"><%= stripped %></p>
      <% end %>
    <% end %>
  </div>
</div>
