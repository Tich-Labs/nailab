<h1 class="text-2xl font-bold mb-4">Upload Logo</h1>

<%= form_with model: [:admin, @logo], local: true, html: { multipart: true } do |f| %>
  <div class="mb-4">
    <%= f.label :name, class: "block mb-1" %>
    <%= f.text_field :name, class: "input" %>
  </div>

  <div class="mb-4">
    <%= f.label :image, class: "block mb-1" %>
    <%= f.file_field :image, accept: 'image/*' %>
  </div>

  <div class="mb-4">
    <%= f.label :display_order, class: "block mb-1" %>
    <%= f.number_field :display_order, class: "input", value: 0 %>
  </div>

  <div>
    <%= f.submit "Upload", class: "btn btn-primary" %>
  </div>
<% end %>
