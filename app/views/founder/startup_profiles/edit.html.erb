<%# app/views/founder/startup_profiles/edit.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Edit Startup Profile</h1>
    <p class="text-xl text-gray-600">Update your startup's information to attract investors and partners</p>
  </div>
  <div class="bg-white rounded-xl shadow-lg p-8 lg:p-12">
    <form action="<%= founder_startup_profile_path %>" method="post" class="space-y-8">
      <input type="hidden" name="_method" value="patch" />
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-6">
          <div>
            <label for="startup_profile_startup_name" class="block text-lg font-semibold text-gray-900 mb-2">Name</label>
            <input type="text" name="startup_profile[startup_name]" id="startup_profile_startup_name" value="<%= @startup_profile.startup_name %>" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" />
          </div>
          <div>
            <label for="startup_profile_description" class="block text-lg font-semibold text-gray-900 mb-2">Description</label>
            <textarea name="startup_profile[description]" id="startup_profile_description" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all resize-none"><%= @startup_profile.description %></textarea>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="startup_profile_stage" class="block text-sm font-medium text-gray-700 mb-2">Stage</label>
              <select name="startup_profile[stage]" id="startup_profile_stage" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all">
                <option value="Idea" <%= @startup_profile.stage == 'Idea' ? 'selected' : '' %>>Idea</option>
                <option value="MVP" <%= @startup_profile.stage == 'MVP' ? 'selected' : '' %>>MVP</option>
                <option value="Early Stage" <%= @startup_profile.stage == 'Early Stage' ? 'selected' : '' %>>Early Stage</option>
                <option value="Growth" <%= @startup_profile.stage == 'Growth' ? 'selected' : '' %>>Growth</option>
                <option value="Scale" <%= @startup_profile.stage == 'Scale' ? 'selected' : '' %>>Scale</option>
              </select>
            </div>
            <div>
              <label for="startup_profile_sector" class="block text-sm font-medium text-gray-700 mb-2">Sector</label>
              <input type="text" name="startup_profile[sector]" id="startup_profile_sector" value="<%= @startup_profile.sector %>" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" />
            </div>
          </div>
        </div>
        <div class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="startup_profile_funding_stage" class="block text-sm font-medium text-gray-700 mb-2">Funding stage</label>
              <select name="startup_profile[funding_stage]" id="startup_profile_funding_stage" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all">
                <option value="Pre-seed" <%= @startup_profile.funding_stage == 'Pre-seed' ? 'selected' : '' %>>Pre-seed</option>
                <option value="Seed" <%= @startup_profile.funding_stage == 'Seed' ? 'selected' : '' %>>Seed</option>
                <option value="Series A" <%= @startup_profile.funding_stage == 'Series A' ? 'selected' : '' %>>Series A</option>
                <option value="Series B+" <%= @startup_profile.funding_stage == 'Series B+' ? 'selected' : '' %>>Series B+</option>
                <option value="Bootstrapped" <%= @startup_profile.funding_stage == 'Bootstrapped' ? 'selected' : '' %>>Bootstrapped</option>
              </select>
            </div>
                  <div>
              <label for="startup_profile_funding_raised" class="block text-sm font-medium text-gray-700 mb-2">Funding raised</label>
              <input type="number" name="startup_profile[funding_raised]" id="startup_profile_funding_raised" value="<%= @startup_profile.funding_raised %>" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" />
                  </div>
                </div>
                <div>
            <label for="startup_profile_target_market" class="block text-lg font-semibold text-gray-900 mb-2">Target market</label>
            <input type="text" name="startup_profile[target_market]" id="startup_profile_target_market" value="<%= @startup_profile.target_market %>" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all" />
                </div>
                  <div>
                    <label for="startup_profile_value_proposition" class="block text-lg font-semibold text-gray-900 mb-2">Value proposition</label>
                    <textarea name="startup_profile[value_proposition]" id="startup_profile_value_proposition" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all resize-none"><%= @startup_profile.value_proposition %></textarea>
                </div>
              </div>
            </div>
            <div class="pt-8 border-t border-gray-200">
              <div class="flex flex-col sm:flex-row gap-4 justify-end">
                <%= link_to 'Cancel', founder_startup_profile_path, class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 text-lg font-semibold rounded-xl hover:bg-gray-50 transition-all" %>
                <button type="submit" class="inline-flex items-center justify-center px-8 py-3 bg-teal-600 text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-teal-700 transition-all">Update Profile</button>
              </div>
            </div>
          </form>
        </div>
      </div>