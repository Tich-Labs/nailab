<%# app/views/founder/mentors/show.html.erb %>
<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-start justify-between mb-6">
      <div class="flex items-center space-x-4">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center">
          <span class="text-purple-600 font-semibold text-xl"><%= @mentor.name.first %></span>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @mentor.name %></h1>
          <p class="text-lg text-gray-600"><%= @mentor.expertise %></p>
          <p class="text-sm text-gray-500"><%= @mentor.company %> • <%= @mentor.years_experience %> years experience</p>
        </div>
      </div>
      <%= link_to 'Request Mentorship', new_founder_mentorship_request_path(mentor_id: @mentor.id), class: "bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700" %>
    </div>
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">About</h2>
      <p class="text-gray-600"><%= @mentor.bio %></p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="font-medium text-gray-700">Specialties</h3>
        <ul class="mt-2 space-y-1">
          <% @mentor.specialties.split(',').each do |specialty| %>
            <li class="text-sm text-gray-600">• <%= specialty.strip %></li>
          <% end %>
        </ul>
      </div>
      <div>
        <h3 class="font-medium text-gray-700">Industries</h3>
        <ul class="mt-2 space-y-1">
          <% @mentor.industries.split(',').each do |industry| %>
            <li class="text-sm text-gray-600">• <%= industry.strip %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="border-t pt-6">
      <h3 class="font-medium text-gray-700 mb-4">Availability</h3>
      <p class="text-gray-600"><%= @mentor.availability %></p>
    </div>
  </div>
</div>