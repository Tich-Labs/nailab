<%# app/views/founder/startup_profiles/show.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-2">Startup Profile</h1>
      <p class="text-xl text-gray-600">Manage your startup's information and visibility</p>
    </div>
    <div class="mt-4 md:mt-0">
      <%= link_to 'Edit Profile', edit_founder_startup_profile_path, class: 'inline-flex items-center px-6 py-3 bg-teal-600 text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-teal-700 transition-all' %>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white"><%= @startup_profile.startup_name %></h2>
      <p class="text-purple-100 mt-1"><%= @startup_profile.value_proposition || 'Building the future of innovation' %></p>
    </div>
    <div class="p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Company Details</h3>
            <div class="space-y-4">
              <div class="flex flex-col md:flex-row md:items-center py-2 border-b border-gray-100">
                <span class="bg-purple-50 text-purple-700 font-semibold px-3 py-1 rounded mb-2 md:mb-0 md:mr-4 min-w-[140px] text-left">Description</span>
                <span class="text-gray-900 text-left pl-4 align-middle"><%= @startup_profile.description %></span>
              </div>
              <div class="flex flex-col md:flex-row md:items-center py-2 border-b border-gray-100">
                <span class="bg-purple-50 text-purple-700 font-semibold px-3 py-1 rounded mb-2 md:mb-0 md:mr-4 min-w-[140px] text-left">Stage</span>
                <span class="text-gray-900 font-semibold text-left pl-4 align-middle"><%= @startup_profile.stage %></span>
              </div>
              <div class="flex flex-col md:flex-row md:items-center py-2 border-b border-gray-100">
                <span class="bg-purple-50 text-purple-700 font-semibold px-3 py-1 rounded mb-2 md:mb-0 md:mr-4 min-w-[140px] text-left">Sector</span>
                <span class="text-gray-900 font-semibold text-left pl-4 align-middle"><%= @startup_profile.sector %></span>
              </div>
              <div class="flex flex-col md:flex-row md:items-center py-2 border-b border-gray-100">
                <span class="bg-purple-50 text-purple-700 font-semibold px-3 py-1 rounded mb-2 md:mb-0 md:mr-4 min-w-[140px] text-left">Funding Stage</span>
                <span class="text-gray-900 font-semibold text-left pl-4 align-middle"><%= @startup_profile.funding_stage %></span>
              </div>
              <div class="flex flex-col md:flex-row md:items-center py-2">
                <span class="bg-purple-50 text-purple-700 font-semibold px-3 py-1 rounded mb-2 md:mb-0 md:mr-4 min-w-[140px] text-left">Funding Raised</span>
                <span class="text-gray-900 font-semibold text-left pl-4 align-middle">$<%= number_with_delimiter(@startup_profile.funding_raised) %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Market & Vision</h3>
            <div class="space-y-4">
              <div class="flex flex-col md:flex-row md:items-center py-2">
                <span class="bg-purple-50 text-purple-700 font-semibold px-3 py-1 rounded mb-2 md:mb-0 md:mr-4 min-w-[140px] text-left">Target Market</span>
                <span class="text-gray-900 text-left pl-4 align-middle"><%= @startup_profile.target_market %></span>
              </div>
              <div class="flex flex-col md:flex-row md:items-center py-2">
                <span class="bg-purple-50 text-purple-700 font-semibold px-3 py-1 rounded mb-2 md:mb-0 md:mr-4 min-w-[140px] text-left">Value Proposition</span>
                <span class="text-gray-900 text-left pl-4 align-middle"><%= @startup_profile.value_proposition %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-200">
        <div class="flex flex-col md:flex-row md:items-center md:justify-end gap-4 mb-6">
          <a href="#team-members" class="inline-flex items-center px-6 py-3 bg-purple-600 text-white text-lg font-semibold rounded-xl shadow-lg hover:bg-purple-700 transition-all">Team Members</a>
        </div>
        <div id="team-members" class="mt-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Team Members</h3>
          <ul class="space-y-4">
            <li class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg">
              <div class="flex-1">
                <span class="font-semibold text-teal-700">Founder</span><br>
                <span class="text-gray-900"><%= current_user.full_name.presence || current_user.email %></span>
              </div>
              <span class="text-sm text-gray-500">Role: Founder</span>
            </li>
            <% (@startup_profile.team_members || []).each do |member| %>
              <li class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg">
                <div class="flex-1">
                  <span class="font-semibold text-gray-900"><%= member['name'] %></span>
                </div>
                <span class="text-sm text-gray-500">Role: <%= member['role'] %></span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>