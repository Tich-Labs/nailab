<%# app/views/founder/monthly_metrics/index.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Monthly Metrics</h1>
    <%= link_to 'Add New Metrics', new_founder_monthly_metric_path, class: "btn btn-primary" %>
  </div>
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b">
      <h2 class="text-lg font-semibold">Metrics Overview</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Revenue</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Users</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Growth</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @monthly_metrics.each do |metric| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= metric.month.strftime('%B %Y') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                $<%= number_with_delimiter(metric.revenue) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= number_with_delimiter(metric.users) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= metric.growth_rate %>% MoM
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to 'Edit', edit_founder_monthly_metric_path(metric), class: "text-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if @monthly_metrics.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">No metrics recorded yet.</p>
        <%= link_to 'Add your first metrics', new_founder_monthly_metric_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</div>