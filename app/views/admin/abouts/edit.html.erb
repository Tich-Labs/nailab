<h1 class="text-2xl font-bold mb-6">About Page â€” Sections</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <% @sections.each do |section| %>
    <% section_key = section[:key] || section[:title].parameterize(separator: "_") %>
    <% section_id = "section-#{section_key}" %>
    <div id="<%= section_id %>" class="p-4 bg-white rounded shadow flex items-center justify-between">
      <div class="flex-1">
        <h2 class="text-lg md:text-xl font-semibold text-slate-900 dark:text-slate-100"><%= section[:title] %></h2>
        <% if section[:description].present? %>
          <p class="mt-1 text-sm text-slate-500"><%= section[:description] %></p>
        <% end %>
      </div>
      <div class="ml-4 flex-shrink-0">
        <% if section[:path] && section[:path] != '#' %>
          <%= link_to 'Edit', section[:path], class: 'btn btn-lg btn-success' %>
        <% else %>
          <span class="text-sm text-gray-500">Editor not implemented</span>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- Pricing Page Section -->
  <div id="section-pricing-page" class="p-4 bg-white rounded shadow flex items-center justify-between">
    <div class="flex-1">
      <h2 class="text-lg md:text-xl font-semibold text-slate-900 dark:text-slate-100">Pricing Page</h2>
      <p class="mt-1 text-sm text-slate-500">Flexible plans for every stage of your startup journey. Edit pricing page content and preview live.</p>
    </div>
    <div class="ml-4 flex-shrink-0">
      <%= link_to 'Edit', admin_edit_admin_pricing_page_slug_path('pricing'), class: 'btn btn-lg btn-success' %>
    </div>
  </div>
</div>
