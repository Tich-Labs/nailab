<div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all p-8">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Recommended Mentors</h2>
      <p class="text-gray-600 mt-1">Connect with experienced mentors in your industry</p>
    </div>
    <div class="w-12 h-12 bg-gradient-to-br from-teal-400 to-purple-500 rounded-full flex items-center justify-center">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @recommended_mentors.each do |mentor| %>
      <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-xl hover:border-teal-300 transition-all duration-300 group cursor-pointer">
        <!-- Header with Avatar and Status -->
        <div class="flex items-start justify-between mb-4">
          <div class="flex items-center space-x-3">
            <div class="relative">
              <div class="w-14 h-14 bg-gradient-to-br from-teal-400 via-purple-500 to-indigo-600 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white font-bold text-xl"><%= mentor.name&.first || '?' %></span>
              </div>
              <!-- Online status indicator -->
              <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-400 border-2 border-white rounded-full"></div>
            </div>
            <div>
              <h3 class="font-bold text-gray-900 text-lg leading-tight"><%= mentor.name || 'Unknown Mentor' %></h3>
              <% if mentor.company.present? %>
                <p class="text-sm text-gray-600 font-medium flex items-center">
                  <svg class="w-3 h-3 mr-1 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm3 1h6v2H7V5zm0 4h6v2H7V9z" clip-rule="evenodd"/>
                  </svg>
                  <%= mentor.company %>
                </p>
              <% end %>
            </div>
          </div>
          <!-- Favorite/Bookmark button -->
          <button class="opacity-0 group-hover:opacity-100 transition-opacity p-2 hover:bg-gray-100 rounded-full">
            <svg class="w-5 h-5 text-gray-400 hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </button>
        </div>
        <!-- Expertise Tags -->
        <% if mentor.expertise.present? && mentor.expertise.any? %>
          <div class="mb-4">
            <div class="flex flex-wrap gap-2">
              <% mentor.expertise.first(3).each do |skill| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-teal-100 to-purple-100 text-teal-800 border border-teal-200">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <%= skill %>
                </span>
              <% end %>
              <% if mentor.expertise.size > 3 %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-600">
                  +<%= mentor.expertise.size - 3 %> more
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
        <!-- Stats/Experience -->
        <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
          <div class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>12 sessions</span>
          </div>
          <div class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span>4.8</span>
          </div>
        </div>
        <!-- Action Buttons -->
        <div class="flex space-x-2">
          <%= link_to 'View Profile', founder_mentor_path(mentor),
              class: 'flex-1 bg-gradient-to-r from-teal-500 to-purple-600 text-white text-sm font-semibold py-2 px-4 rounded-lg hover:from-teal-600 hover:to-purple-700 transition-all duration-200 text-center shadow-md hover:shadow-lg' %>
          <button class="p-2 text-gray-400 hover:text-teal-600 hover:bg-teal-50 rounded-lg transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-8">
    <%= link_to founder_mentorship_path, class: 'inline-flex items-center space-x-2 text-teal-600 font-semibold hover:text-teal-700 transition-colors group' do %>
      <span>Browse All Mentors</span>
      <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    <% end %>
  </div>
</div>