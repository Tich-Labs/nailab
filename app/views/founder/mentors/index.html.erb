<%# app/views/founder/mentors/index.html.erb %>
<div data-theme="nailab_founder" class="min-h-screen bg-base-100 text-base-content">
  <div class="max-w-6xl mx-auto py-8 px-4">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-nailab-purple mb-4">Mentors</h1>
    <p class="text-xl text-base-content/60">Connect with experienced founders and industry experts</p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @mentors.each do |mentor| %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="p-6">
          <div class="flex items-center space-x-4 mb-4">
            <div class="w-12 h-12 bg-nailab-purple text-white rounded-full flex items-center justify-center">
              <span class="font-semibold"><%= mentor.name.first %></span>
            </div>
            <div>
              <h3 class="text-lg font-semibold"><%= mentor.name %></h3>
              <p class="text-sm text-gray-600"><%= mentor.expertise %></p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4"><%= mentor.bio %></p>
          <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
            <span><%= mentor.company %></span>
            <span><%= mentor.years_experience %> years exp.</span>
          </div>
          <%= link_to 'View Profile', founder_mentor_path(mentor), class: "inline-flex items-center justify-center px-4 py-2 bg-nailab-purple text-white w-full rounded-lg font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>
  <% if @mentors.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">No mentors available at the moment.</p>
    </div>
  <% end %>
</div>
</div>