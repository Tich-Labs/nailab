<%# app/views/founder/mentorship_requests/edit.html.erb %>
<div data-theme="nailab_founder" class="min-h-screen bg-base-100 text-base-content">
  <div class="max-w-2xl mx-auto py-8 px-4">
  <div class="bg-white shadow rounded-lg p-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Edit Mentorship Request</h1>
      <p class="text-gray-600 mt-2">Update your message or suggested time for this mentorship request.</p>
    </div>
    <%= form_with model: @request, url: founder_mentorship_request_path(@request), method: :patch, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :message, placeholder: "Tell the mentor about your startup, what you're working on, and what kind of help you're looking for...", rows: 6, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>
      <div>
        <%= form.label :proposed_time, "Proposed time (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :proposed_time, value: (@request.proposed_time && @request.proposed_time.strftime('%Y-%m-%dT%H:%M')) , class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>
      <div class="flex justify-end space-x-4">
        <%= link_to 'Cancel', founder_mentorship_requests_path, class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-semibold" %>
        <%= form.submit 'Save Changes', class: "btn btn-primary font-semibold" %>
      </div>
    <% end %>
  </div>
</div>
</div>
