<div class="bg-gradient-to-br from-purple-700 to-teal-600 py-12">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-white">
    <h1 class="text-4xl font-bold"><%= @startup_profile.startup_name %></h1>
    <p class="mt-2 text-lg"><%= @startup_profile.value_proposition.presence || 'Building the next generation of African innovation.' %></p>
    <div class="mt-4 flex flex-wrap gap-3 text-sm">
      <% if @startup_profile.stage.present? %>
        <span class="px-3 py-1 rounded-full bg-white/20"><%= @startup_profile.stage %></span>
      <% end %>
      <% if @startup_profile.sector.present? %>
        <span class="px-3 py-1 rounded-full bg-white/20"><%= @startup_profile.sector %></span>
      <% end %>
      <% if @startup_profile.funding_stage.present? %>
        <span class="px-3 py-1 rounded-full bg-white/20"><%= funding_stage_label(@startup_profile.funding_stage) %></span>
      <% end %>
    </div>
  </div>
</div>
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="grid gap-8 lg:grid-cols-3">
    <div class="lg:col-span-2 bg-white rounded-3xl shadow-lg p-8 space-y-6">
      <section>
        <h2 class="text-2xl font-semibold text-gray-900">About the startup</h2>
        <p class="mt-4 text-gray-700 leading-relaxed"><%= @startup_profile.description %></p>
      </section>
      <section class="grid gap-6 sm:grid-cols-2">
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100">
          <h3 class="text-md font-semibold text-gray-500 uppercase tracking-wide">Target market</h3>
          <p class="mt-3 text-gray-900"><%= @startup_profile.target_market %></p>
        </div>
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100">
          <h3 class="text-md font-semibold text-gray-500 uppercase tracking-wide">Challenge</h3>
          <p class="mt-3 text-gray-900"><%= @startup_profile.challenge_details %></p>
        </div>
      </section>
      <section>
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Mentorship focus</h3>
        <div class="space-y-2 text-gray-700 text-sm">
          <% Array(@startup_profile.mentorship_areas).each do |area| %>
            <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-purple-50 text-purple-700">â–  <%= area %></span>
          <% end %>
        </div>
      </section>
    </div>
    <div class="space-y-6">
      <div class="bg-white rounded-3xl shadow-lg p-6 border border-gray-100 space-y-4">
        <h3 class="text-lg font-semibold text-gray-900">Quick facts</h3>
        <ul class="space-y-3 text-sm text-gray-600">
          <% if @startup_profile.location.present? %>
            <li><strong>Location:</strong> <%= @startup_profile.location %></li>
          <% end %>
          <% if @startup_profile.website_url.present? %>
            <li><strong>Website:</strong> <%= link_to @startup_profile.website_url, @startup_profile.website_url, target: '_blank', rel: 'noreferrer', class: 'text-purple-600 hover:underline' %></li>
          <% end %>
          <% if @startup_profile.founded_year.present? %>
            <li><strong>Founded:</strong> <%= @startup_profile.founded_year %></li>
          <% end %>
          <% if @startup_profile.team_size&.positive? %>
            <li><strong>Team size:</strong> <%= @startup_profile.team_size %></li>
          <% end %>
          <% if @startup_profile.funding_raised.present? %>
            <li><strong>Funds raised:</strong> $<%= number_with_delimiter(@startup_profile.funding_raised) %></li>
          <% end %>
        </ul>
      </div>
      <% if @owner_viewing %>
        <div class="bg-gradient-to-r from-purple-600 to-teal-500 text-white rounded-3xl p-6 shadow-lg">
          <h3 class="text-lg font-semibold">You are viewing your public profile</h3>
          <p class="mt-2 text-sm">Toggle the visibility flag in your profile settings to hide or share this page.</p>
          <%= link_to 'Edit Startup Profile', founder_startup_profile_path, class: 'mt-4 inline-flex px-4 py-2 bg-white text-purple-700 font-semibold rounded-full' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
