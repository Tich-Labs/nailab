<h1 class="text-2xl font-bold mb-4">Edit Focus Area</h1>

<div class="bg-white p-6 rounded shadow">
  <%= form_with model: @focus_area, url: admin_update_focus_area_path(@focus_area), method: :patch, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: 'block font-medium' %>
      <%= f.text_field :title, input_html: { class: 'w-full form-input admin-form-input bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' } %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: 'block font-medium' %>
      <%= f.text_area :description, rows: 4, input_html: { class: 'w-full form-textarea admin-form-textarea bg-white border border-gray-200 shadow-sm rounded-md px-3 py-2' } %>
    </div>

    <div class="mb-4">
      <%= f.label :icon, class: 'block font-medium' %>
      <%= f.text_field :icon, class: 'w-full form-input admin-form-input' %>
    </div>

    <div class="mb-4">
      <%= f.check_box :active %>
      <%= f.label :active, 'Active', class: 'ml-2' %>
    </div>

    <div>
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_focus_areas_path, class: 'ml-2 btn btn-secondary' %>
    </div>
  <% end %>
</div>
