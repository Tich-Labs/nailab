<%# _focus_areas.html.erb - FocusAreas (key focus sectors) %>
<%
  focus_items = if local_assigns.key?(:focus_areas)
    local_assigns[:focus_areas]
  elsif defined?(FocusArea)
    FocusArea.where(active: true).order(:display_order)
  else
    []
  end
%>

<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-6">Our Focus Areas</h2>
    <div class="flex flex-wrap justify-center gap-6">
      <% if focus_items.present? %>
        <% focus_items.each do |fa| %>
          <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
            <h3 class="text-xl font-semibold text-purple-700 mb-2"><%= fa.title %></h3>
            <p class="text-gray-700"><%= fa.description %></p>
          </div>
        <% end %>
      <% else %>
        <!-- Fallback static cards -->
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">HealthTech</h3>
          <p class="text-gray-700">Innovative solutions improving healthcare accessibility and quality across Africa</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">AgriTech</h3>
          <p class="text-gray-700">Technologies enhancing agricultural productivity and sustainability.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">FinTech</h3>
          <p class="text-gray-700">Innovations making banking, payments, and financial services more accessible.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">EduTech</h3>
          <p class="text-gray-700">Digital solutions revolutionizing education and skill development in Africa.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">CleanTech</h3>
          <p class="text-gray-700">Sustainable solutions for renewable energy and environmental conservation.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">E-commerce & RetailTech</h3>
          <p class="text-gray-700">Innovative solutions transforming how Africans shop and access goods, no matter where they live.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">SaaS</h3>
          <p class="text-gray-700">Empowering businesses with scalable software solutions to enhance operations and growth.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">AI & ML</h3>
          <p class="text-gray-700">Artificial intelligence and machine learning applications solving African challenges.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">Robotics</h3>
          <p class="text-gray-700">Robotic innovations addressing industrial and social needs across the continent.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">MobileTech</h3>
          <p class="text-gray-700">Mobile-first solutions designed for Africa's rapidly growing smartphone market.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">Mobility & LogisticsTech</h3>
          <p class="text-gray-700">Streamlining the movement of people and goods for a more connected Africa.</p>
        </div>
        <div class="bg-purple-50 border border-purple-100 rounded-xl px-8 py-6 w-64 shadow">
          <h3 class="text-xl font-semibold text-purple-700 mb-2">Creative & MediaTech</h3>
          <p class="text-gray-700">Revolutionizing digital content creation and consumption across the continent.</p>
        </div>
      <% end %>
    </div>
  </div>
</section>
