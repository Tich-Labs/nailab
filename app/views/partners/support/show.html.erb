<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Support</h1>
    <p class="mt-2 text-gray-600">Get help with your partnership</p>
  </div>
  <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white">Contact Support</h2>
      <p class="text-purple-100 mt-1">We're here to help with your partnership</p>
    </div>
    <div class="p-8">
      <%= form_with url: partners_support_path, method: :post, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :subject, "Subject", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :subject, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent shadow-sm", placeholder: "Brief description of your issue" %>
        </div>
        <div>
          <%= form.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :category, [
            ['General Partnership Inquiry', 'general'],
            ['Technical Support', 'technical'],
            ['Account Issues', 'account'],
            ['Billing & Payments', 'billing'],
            ['Other', 'other']
          ], { include_blank: "Select a category" }, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent shadow-sm" %>
        </div>
        <div>
          <%= form.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :message, rows: 6, class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent shadow-sm", placeholder: "Please provide details about your question or issue..." %>
        </div>
        <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200">
          <%= link_to 'Cancel', partners_root_path, class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 font-semibold transition-colors" %>
          <%= form.submit 'Submit Request', class: "px-8 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white rounded-xl hover:from-purple-700 hover:to-teal-700 font-semibold shadow-lg transition-all" %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Contact Information -->
  <div class="mt-8 bg-white rounded-2xl shadow-xl overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white">Alternative Contact Methods</h2>
      <p class="text-blue-100 mt-1">Other ways to reach us</p>
    </div>
    <div class="p-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-start space-x-4">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Email</h3>
            <p class="text-gray-600">partners@nailab.com</p>
            <p class="text-sm text-gray-500 mt-1">Response within 24 hours</p>
          </div>
        </div>
        <div class="flex items-start space-x-4">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Live Chat</h3>
            <p class="text-gray-600">Available during business hours</p>
            <p class="text-sm text-gray-500 mt-1">Mon-Fri, 9AM-6PM GMT</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</content>
