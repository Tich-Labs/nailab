<% content_for :title do %>
  <%= @page_name.presence || "Admin" %> | Nailab Admin
<% end %>
<% if flash.present? %>
  <div class="space-y-2 mb-4">
    <% flash.each do |type, msg| %>
      <% css_type = case type.to_s
        when 'notice', 'success' then 'success'
        when 'alert', 'error' then 'danger'
        when 'info' then 'info'
        when 'warning' then 'warning'
        else 'info'
      end %>
      <div class="alert alert-<%= css_type %> rounded-2xl px-4 py-3 text-sm shadow-sm">
        <span class="font-semibold"><%= type.to_s.upcase %>:</span>
        <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>
<div class="space-y-6">
  <%= yield %>
</div>
