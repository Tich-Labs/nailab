<%= render 'devise/shared/auth_layout', title: 'Create your Nailab account', subtitle: 'Become part of the community, manage your programs, and stay informed.' do %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="space-y-6">
      <div>
        <%= f.label :email, class: 'block text-sm font-semibold text-slate-600' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.label :password, class: 'block text-sm font-semibold text-slate-600' %>
        <% if @minimum_password_length %>
          <p class="text-xs text-slate-500"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.label :password_confirmation, class: 'block text-sm font-semibold text-slate-600' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.submit 'Sign up', class: 'w-full rounded-2xl bg-purple-600 px-4 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-purple-700' %>
      </div>
    </div>
  <% end %>
  <%= render 'devise/shared/links' %>
<% end %>
