<div class="bg-white p-6 rounded shadow space-y-5">
  <div class="space-y-4">
    <div>
      <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Section Title</p>
      <h2 class="text-2xl font-bold text-slate-900"><%= @section_content["title"] %></h2>
    </div>
    <div>
      <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Description</p>
      <p class="text-sm text-slate-600"><%= @section_content["description"] %></p>
    </div>
    <% if @section_content["stats"].present? %>
      <div class="space-y-4 bg-slate-50 p-4 rounded-xl">
        <p class="text-xs font-semibold uppercase tracking-wider text-slate-400">Impact Stats</p>
        <div class="flex flex-row justify-center items-center gap-6 flex-wrap">
          <% @section_content["stats"].each do |stat| %>
            <div class="text-center">
              <p class="text-3xl font-bold text-slate-800"><%= stat["value"] || stat[:value] %></p>
              <p class="text-xs font-semibold uppercase tracking-wider text-slate-500"><%= stat["label"] || stat[:label] %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
