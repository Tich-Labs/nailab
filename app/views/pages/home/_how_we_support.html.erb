<%# _how_we_support.html.erb - HowWeSupport (services/approach) %>
<section class="py-20 bg-gradient-to-br from-teal-50 to-purple-50">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-6">How Nailab Supports You</h2>
    <div class="grid gap-8 lg:grid-cols-2">
      <% @how_we_support_items.each do |item| %>
        <div class="bg-white rounded-2xl shadow-xl p-8 text-left flex flex-col h-full">
          <p class="text-xs uppercase tracking-[0.4em] text-teal-500 mb-4">Support</p>
          <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= item[:title] %></h3>
          <p class="text-gray-700 mb-6"><%= item[:description] %></p>
          <%= link_to item[:cta_label], item[:cta_link], class: 'mt-auto inline-flex items-center justify-center px-6 py-3 rounded-full border border-teal-600 text-teal-600 font-semibold hover:bg-teal-600 hover:text-white transition-all' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%# _how_we_support.html.erb - HowWeSupport (services/approach) %>
<section class="py-20 bg-gradient-to-br from-teal-50 to-purple-50">
  <% support_items = [
    {
      title: 'Create your founder profile',
      description: "Set up your founder profile to unlock tools that track progress, surface opportunities, and match you with the right mentors and programs.",
      cta: 'Set up profile',
      link: signup_path
    },
    {
      title: 'Find mentors',
      description: "Book 1-on-1 sessions with experienced operators who can help you refine strategy, operations, product, and leadership.",
      cta: 'Book mentorship',
      link: mentors_path
    },
    {
      title: 'Peer-to-peer network',
      description: "Connect with fellow founders facing similar challenges, share insights, and build supportive relationships across the continent.",
      cta: 'Join the community',
      link: startups_path
    },
    {
      title: 'Access growth resources',
      description: "Browse curated templates, playbooks, funding leads, and invites to events, pitch days, and accelerator moments.",
      cta: 'Explore resources',
      link: resources_path
    }
  ] %>
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-6">How Nailab Supports You</h2>
    <div class="grid gap-8 lg:grid-cols-2">
      <% support_items.each do |item| %>
        <div class="bg-white rounded-2xl shadow-xl p-8 flex flex-col h-full text-left">
          <p class="text-xs uppercase tracking-[0.4em] text-teal-500 mb-4">Support</p>
          <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= item[:title] %></h3>
          <p class="text-gray-700 mb-6"><%= item[:description] %></p>
          <%= link_to item[:cta], item[:link], class: 'mt-auto inline-flex items-center justify-center px-6 py-3 rounded-full border border-teal-600 text-teal-600 font-semibold hover:bg-teal-600 hover:text-white transition-all' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
