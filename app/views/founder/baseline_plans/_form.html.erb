<%= form_with(model: baseline_plan, url: baseline_plan.new_record? ? founder_baseline_plans_path : founder_baseline_plan_path(baseline_plan), local: true) do |form| %>
  <% if baseline_plan.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% baseline_plan.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="space-y-6">
    <div>
      <%= form.label :title, class: 'block text-sm font-semibold text-slate-600' %>
      <%= form.text_field :title, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
    </div>
    <div>
      <%= form.label :description, class: 'block text-sm font-semibold text-slate-600' %>
      <%= form.text_area :description, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
    </div>
    <div>
      <%= form.label :baseline_revenue, class: 'block text-sm font-semibold text-slate-600' %>
      <div class="relative">
        <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-slate-500">$</span>
        <%= form.number_field :baseline_revenue, step: :any, class: 'mt-1 w-full pl-8 pr-4 rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
    </div>
    <div>
      <%= form.label :baseline_customers, class: 'block text-sm font-semibold text-slate-600' %>
      <%= form.number_field :baseline_customers, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
    </div>
    <div>
      <%= form.label :baseline_burn_rate, class: 'block text-sm font-semibold text-slate-600' %>
      <div class="relative">
        <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-slate-500">$</span>
        <%= form.number_field :baseline_burn_rate, step: :any, class: 'mt-1 w-full pl-8 pr-4 rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
    </div>
    <div>
      <%= form.label :target_milestones, class: 'block text-sm font-semibold text-slate-600' %>
      <%= form.text_area :target_milestones, placeholder: 'Enter milestones as JSON array, e.g., ["Milestone 1", "Milestone 2"]', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
    </div>
    <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
      <%= link_to founder_baseline_plans_path, class: "inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 text-sm font-semibold rounded-xl hover:bg-gray-200 transition-all" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
        Cancel
      <% end %>
      <%= form.submit class: 'inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white text-sm font-semibold rounded-xl hover:from-purple-700 hover:to-teal-700 transition-all shadow-lg' %>
    </div>
  </div>
<% end %>