<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Organization Profile</h1>
    <p class="mt-2 text-gray-600">Manage your partnership information</p>
  </div>
  <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
      <h2 class="text-2xl font-bold text-white">Profile Details</h2>
      <p class="text-purple-100 mt-1">Your organization information</p>
    </div>
    <div class="p-8">
      <% if @partner_application.persisted? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Organization Information -->
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Organization Information</h3>
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700">Organization Name</label>
                  <p class="mt-1 text-gray-900"><%= @partner_application.organization_name %></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700">Organization Type</label>
                  <p class="mt-1 text-gray-900"><%= @partner_application.organization_type&.humanize || 'Not specified' %></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700">Website</label>
                  <p class="mt-1 text-gray-900">
                    <% if @partner_application.website.present? %>
                      <a href="<%= @partner_application.website %>" target="_blank" class="text-purple-600 hover:text-purple-800"><%= @partner_application.website %></a>
                    <% else %>
                      Not provided
                    <% end %>
                  </p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700">Country</label>
                  <p class="mt-1 text-gray-900"><%= @partner_application.country || 'Not specified' %></p>
                </div>
              </div>
            </div>
          </div>
          <!-- Contact Information -->
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h3>
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700">Contact Name</label>
                  <p class="mt-1 text-gray-900"><%= @partner_application.contact_name %></p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700">Contact Email</label>
                  <p class="mt-1 text-gray-900"><%= @partner_application.contact_email %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Description -->
        <% if @partner_application.description.present? %>
          <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Description</h3>
            <p class="text-gray-700 bg-gray-50 rounded-lg p-4"><%= @partner_application.description %></p>
          </div>
        <% end %>
        <!-- Key Sectors and Collaboration Areas -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8">
          <% if @partner_application.key_sectors.present? && @partner_application.key_sectors.is_a?(Array) %>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Key Sectors</h3>
              <div class="flex flex-wrap gap-2">
                <% @partner_application.key_sectors.each do |sector| %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                    <%= sector.humanize %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          <% if @partner_application.collaboration_areas.present? && @partner_application.collaboration_areas.is_a?(Array) %>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Collaboration Areas</h3>
              <div class="flex flex-wrap gap-2">
                <% @partner_application.collaboration_areas.each do |area| %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-teal-100 text-teal-800">
                    <%= area.humanize %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <!-- Edit Button -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <%= link_to 'Edit Profile', edit_partners_profile_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-teal-700 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-100 to-teal-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No Profile Information</h3>
          <p class="text-gray-600 mb-6">Complete your organization profile to get started.</p>
          <%= link_to 'Complete Profile', edit_partners_profile_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-teal-700 transition-all duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</content>
