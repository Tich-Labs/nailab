<div class="space-y-4">
  <h1 class="text-4xl font-bold mb-6 text-center" id="pricing_page_preview_title"><%= @pricing_hero[:title].presence || @pricing_page.title.presence || 'Pricing' %></h1>
  <div class="text-lg text-gray-700 text-center mb-8" id="pricing_page_preview_content">
    <%= raw((@pricing_hero[:subtitle] || '').to_s.gsub(/\n/, '<br/>')) %>
  </div>

  <div id="pricing_page_preview_grid" data-stacked="true">
    <%= render partial: 'shared/pricing_grid', locals: { pricing_tiers: @pricing_tiers, stacked: true } %>
  </div>
</div>
