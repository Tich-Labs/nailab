<%# app/views/founder/progresses/show.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-base-content mb-4">Progress Tracker <span class="text-base font-semibold text-primary">(coming soon)</span></h1>
    <p class="text-xl text-base-content/70">Monitor your startup's milestones and key metrics</p>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Milestones -->
    <div class="card bg-base-100 shadow-lg overflow-hidden">
          <div class="bg-primary px-8 py-6 rounded-t-xl">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold text-primary-content px-4 py-2 shadow-lg">Milestones</h2>
          <button class="btn btn-disabled btn-sm btn-outline text-primary-content/70" disabled aria-disabled="true">Add Milestone</button>
        </div>
      </div>
      <div class="p-8 bg-base-100 rounded-b-xl">
        <div class="space-y-6">
          <% @milestones.each do |milestone| %>
            <div class="card bg-base-200 rounded-xl hover:bg-base-300 transition-all">
              <div class="card-body p-6 flex items-start justify-between">
                <div class="flex-1">
                <div class="flex items-center space-x-3 mb-2">
                  <h3 class="text-lg font-semibold text-base-content"><%= milestone.title %></h3>
                  <span class="badge <%= milestone.completed ? 'badge-success' : 'badge-warning' %>">
                    <%= milestone.completed ? 'Completed' : 'Pending' %>
                  </span>
                </div>
                <p class="text-base-content/70 mb-3"><%= milestone.description %></p>
                <div class="flex items-center space-x-4 text-sm text-base-content/50">
                  <span>Due: <%= milestone.due_date.strftime('%B %d, %Y') %></span>
                  <span class="badge badge-ghost"><%= milestone.category %></span>
                </div>
                </div>
                <div class="flex space-x-2 ml-4">
                <%= link_to 'Edit', edit_founder_milestone_path(milestone), class: "btn btn-link btn-sm text-primary" %>
              </div>
              </div>
            </div>
          <% end %>
        </div>
        <% if @milestones.empty? %>
            <div class="text-center py-12">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-base-content mb-2">No milestones yet</h3>
            <p class="text-base-content/70 mb-6">Start tracking your progress by adding your first milestone.</p>
            <button class="btn btn-disabled btn-lg btn-primary" disabled aria-disabled="true">Create your first milestone</button>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Startup Updates (Monthly) -->
    <div class="card bg-base-100 shadow-lg overflow-hidden">
      <div class="bg-secondary px-8 py-6">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold text-secondary-content">Startup Monthly Updates</h2>
          <%= link_to 'Submit Update', new_founder_startup_update_path, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
      <div class="p-8">
        <% if @startup_updates.any? %>
          <!-- KPI Cards -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <% latest = @startup_updates.first %>
            <div class="card bg-base-200 p-4">
              <div class="text-sm text-base-content/60 mb-1">MRR</div>
              <div class="text-2xl font-bold text-primary">$<%= number_with_delimiter(latest.mrr) %></div>
            </div>
            <div class="card bg-base-200 p-4">
              <div class="text-sm text-base-content/60 mb-1">Burn Rate</div>
              <div class="text-2xl font-bold text-secondary">$<%= number_with_delimiter(latest.burn_rate) %></div>
            </div>
            <div class="card bg-base-200 p-4">
              <div class="text-sm text-base-content/60 mb-1">Runway</div>
              <div class="text-2xl font-bold text-accent"><%= latest.runway || '-' %> mo</div>
            </div>
          </div>
          <!-- Updates Table -->
          <table class="table w-full">
            <thead>
              <tr>
                <th>Month</th>
                <th>Year</th>
                <th>MRR</th>
                <th>New Customers</th>
                <th>Churned</th>
                <th>Cash</th>
                <th>Burn Rate</th>
                <th>Runway</th>
              </tr>
            </thead>
            <tbody>
              <% @startup_updates.each do |update| %>
                <tr>
                  <td><%= Date::MONTHNAMES[update.report_month] %></td>
                  <td><%= update.report_year %></td>
                  <td>$<%= number_with_delimiter(update.mrr) %></td>
                  <td><%= update.new_paying_customers %></td>
                  <td><%= update.churned_customers %></td>
                  <td>$<%= number_with_delimiter(update.cash_at_hand) %></td>
                  <td>$<%= number_with_delimiter(update.burn_rate) %></td>
                  <td><%= update.runway || '-' %> mo</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="text-center py-12">
            <div class="w-16 h-16 bg-secondary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-secondary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-base-content mb-2">No updates yet</h3>
            <p class="text-base-content/70 mb-6">Submit your first monthly update to get started.</p>
            <%= link_to 'Submit Update', new_founder_startup_update_path, class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>