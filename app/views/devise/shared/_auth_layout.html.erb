<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-teal-50 py-12">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow-2xl ring-1 ring-purple-900/5 rounded-[32px] border border-purple-50 overflow-hidden">
      <div class="flex flex-col gap-10 px-6 py-10 sm:px-10 md:px-12 lg:flex-row lg:items-stretch">
        <div class="flex-1 space-y-3">
          <p class="text-xs font-semibold tracking-[0.4em] uppercase text-purple-500">Nailab</p>
          <% title = local_assigns[:title] || "Access Nailab" %>
          <% subtitle = local_assigns[:subtitle] %>
          <h1 class="text-3xl font-bold text-slate-900 leading-tight sm:text-4xl">
            <%= title %>
          </h1>
          <% if subtitle.present? %>
            <p class="text-base text-slate-600 max-w-2xl text-justify lg:text-left">
              <%= subtitle %>
            </p>
          <% end %>
        </div>
        <div class="flex-1 rounded-3xl bg-gradient-to-br from-white to-teal-50/70 p-6 shadow-inner">
          <div class="space-y-8">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
