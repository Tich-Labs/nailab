<%# _testimonials.html.erb - Testimonials %>
<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-6">Testimonials</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <% @testimonials.each do |testimonial| %>
        <div class="bg-teal-50 border border-teal-100 rounded-xl px-8 py-6 shadow">
          <p class="text-lg text-gray-700 mb-4">“<%= testimonial.quote %>”</p>
          <div class="font-semibold text-teal-700"><%= testimonial.author_name %></div>
          <div class="text-sm text-gray-500"><%= testimonial.author_role %></div>
        </div>
      <% end %>
    </div>
  </div>
</section>
