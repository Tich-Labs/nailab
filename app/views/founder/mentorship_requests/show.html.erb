<%# app/views/founder/mentorship_requests/show.html.erb %>
<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Mentorship Request</h1>
        <span class="inline-block px-3 py-1 text-sm rounded-full <%= @mentorship_request.status == 'approved' ? 'bg-green-100 text-green-800' : @mentorship_request.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %> mt-2">
          <%= @mentorship_request.status.titleize %>
        </span>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="font-medium text-gray-700">Mentor</h3>
        <p class="text-gray-600 mt-1"><%= @mentorship_request.mentor.name %></p>
        <p class="text-sm text-gray-500"><%= @mentorship_request.mentor.expertise %></p>
      </div>
      <div>
        <h3 class="font-medium text-gray-700">Requested Date</h3>
        <p class="text-gray-600 mt-1"><%= @mentorship_request.created_at.strftime('%B %d, %Y') %></p>
      </div>
      <div>
        <h3 class="font-medium text-gray-700">Preferred Time</h3>
        <p class="text-gray-600 mt-1"><%= @mentorship_request.preferred_time %></p>
      </div>
      <div>
        <h3 class="font-medium text-gray-700">Duration</h3>
        <p class="text-gray-600 mt-1"><%= @mentorship_request.duration %> minutes</p>
      </div>
    </div>
    <div class="mb-6">
      <h3 class="font-medium text-gray-700">Message</h3>
      <p class="text-gray-600 mt-1"><%= @mentorship_request.message %></p>
    </div>
    <% if @mentorship_request.status == 'approved' %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <h3 class="font-medium text-green-800">Request Approved!</h3>
        <p class="text-green-700 text-sm mt-1">Your mentorship session has been scheduled. Check your sessions for details.</p>
      </div>
    <% elsif @mentorship_request.status == 'pending' %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <h3 class="font-medium text-yellow-800">Request Pending</h3>
        <p class="text-yellow-700 text-sm mt-1">Your request is being reviewed by the mentor.</p>
      </div>
    <% else %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <h3 class="font-medium text-red-800">Request Declined</h3>
        <p class="text-red-700 text-sm mt-1">Unfortunately, this mentor is unable to accept your request at this time.</p>
      </div>
    <% end %>
  </div>
</div>