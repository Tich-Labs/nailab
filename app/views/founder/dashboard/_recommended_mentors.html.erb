<div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
  <div class="card-body">
    <div class="flex items-center justify-between mb-4">
      <h2 class="card-title text-2xl text-nailab-purple">Recommended Mentors</h2>
      <div class="mask mask-squircle w-12 h-12 bg-nailab-teal/10 flex items-center justify-center">
        <svg aria-hidden="true" class="w-6 h-6 text-nailab-teal" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
    </div>
    <p class="text-sm text-base-content/70 mb-6">Connect with experienced mentors in your industry</p>
    <div class="divider my-0"></div>
    <div class="space-y-4 my-6">
      <% @recommended_mentors.each do |mentor| %>
        <div class="card card-side bg-base-200 shadow-md hover:shadow-lg transition-shadow">
          <figure class="flex-shrink-0">
            <div class="w-24 h-24 bg-nailab-teal/20 flex items-center justify-center rounded-l-lg">
              <span class="text-nailab-teal font-bold text-2xl"><%= mentor.name&.first || '?' %></span>
            </div>
          </figure>
          <div class="card-body">
            <h3 class="card-title text-lg text-nailab-purple"><%= mentor.name || 'Unknown Mentor' %></h3>
            <p class="text-sm text-base-content/70"><%= mentor.expertise&.first(3)&.join(', ') || 'No specialties listed' %></p>
            <% if mentor.company.present? %>
              <div class="badge badge-outline"><%= mentor.company %></div>
            <% end %>
            <div class="card-actions justify-end">
              <%= link_to 'View Profile', founder_mentor_path(mentor), class: 'btn btn-xs bg-nailab-teal text-white hover:bg-nailab-teal/80' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-actions justify-end mt-6">
      <%= link_to founder_mentorship_path, class: 'btn btn-sm bg-nailab-teal text-white hover:bg-nailab-teal/80' do %>
        Browse All Mentors â†’
      <% end %>
    </div>
  </div>
</div>