<div class="space-y-12">
  <section class="py-20 bg-gradient-to-br from-teal-50 to-blue-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 space-y-6 text-center">
      <p class="text-xs uppercase tracking-[0.5em] text-nailab-teal"><%= @resource.resource_type&.titleize %></p>
      <h1 class="text-4xl lg:text-5xl font-bold text-slate-900"><%= @resource.title %></h1>
      <p class="text-lg text-slate-700">
        <%= @resource.description %>
      </p>
      <p class="text-sm uppercase tracking-[0.4em] text-slate-600">
        <%= @resource.published_at&.strftime('%B %d, %Y') || 'Date TBD' %>
      </p>
      <div class="flex flex-col gap-3 items-center justify-center sm:flex-row sm:justify-center">
        <% if @resource.url.present? %>
          <%= link_to 'Open original resource', @resource.url, target: '_blank', rel: 'noreferrer', class: 'rounded-full bg-slate-900 px-8 py-3 text-sm font-semibold text-white transition hover:bg-black' %>
        <% end %>
        <%= link_to 'Back to resources', resources_path, class: 'rounded-full bg-nailab-teal px-8 py-3 text-sm font-semibold text-white transition hover:bg-opacity-90' %>
      </div>
    </div>
  </section>
  <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 space-y-6">
    <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
      <h2 class="text-xl font-semibold text-slate-900">Resource overview</h2>
      <p class="mt-4 text-sm text-slate-600 leading-relaxed"><%= simple_format(@resource.description) %></p>
      <div class="mt-6 grid gap-4 sm:grid-cols-2">
        <div class="space-y-1">
          <p class="text-xs uppercase tracking-[0.4em] text-slate-500">Category</p>
          <p class="text-sm font-semibold text-slate-900"><%= @resource.resource_type&.titleize %></p>
        </div>
        <div class="space-y-1">
          <p class="text-xs uppercase tracking-[0.4em] text-slate-500">Published</p>
          <p class="text-sm font-semibold text-slate-900"><%= @resource.published_at&.strftime('%B %d, %Y') || 'TBD' %></p>
        </div>
      </div>
    </div>
    <% if @related_resources.any? %>
      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <h3 class="text-lg font-semibold text-slate-900">More resources</h3>
        <div class="mt-4 space-y-4">
          <% @related_resources.each do |related| %>
            <div class="flex items-center justify-between rounded-2xl bg-slate-50 px-4 py-3">
              <div>
                <p class="text-sm font-semibold text-slate-900"><%= link_to related.title, resource_detail_path(related.slug), class: 'hover:underline' %></p>
                <p class="text-xs uppercase tracking-[0.3em] text-slate-500"><%= related.resource_type&.titleize %></p>
              </div>
              <span class="text-xs text-slate-500"><%= related.published_at&.strftime('%b %d, %Y') %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>
</div>
