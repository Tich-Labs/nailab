<%= form_with(model: [:admin, about_section], class: "contents") do |form| %>
  <% if about_section.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(about_section.errors.count, "error") %> prohibited this about_section from being saved:</h2>

      <ul class="list-disc ml-6">
        <% about_section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": about_section.errors[:title].none?, "border-red-400 focus:outline-red-600": about_section.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :section_type %>
    <%= form.text_field :section_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": about_section.errors[:section_type].none?, "border-red-400 focus:outline-red-600": about_section.errors[:section_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": about_section.errors[:content].none?, "border-red-400 focus:outline-red-600": about_section.errors[:content].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
