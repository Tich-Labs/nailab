<%= render 'devise/shared/auth_layout', title: 'Change your password', subtitle: 'Set a new password and get back to your work.' do %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="space-y-6">
      <div>
        <div class="flex items-center justify-between text-sm font-semibold text-slate-600">
          <span>New password</span>
          <% if @minimum_password_length %>
            <span class="text-xs text-slate-500"><%= @minimum_password_length %> characters minimum</span>
          <% end %>
        </div>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.label :password_confirmation, 'Confirm new password', class: 'block text-sm font-semibold text-slate-600' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
      </div>
      <div>
        <%= f.submit 'Change my password', class: 'w-full rounded-2xl bg-purple-600 px-4 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-purple-700' %>
      </div>
    </div>
  <% end %>
  <%= render 'devise/shared/links' %>
<% end %>
