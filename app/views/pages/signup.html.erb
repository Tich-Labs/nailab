<div class="min-h-screen bg-gradient-to-br from-teal-50 to-blue-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center space-y-3">
      <%= link_to root_path, class: 'flex justify-center' do %>
        <%= image_tag 'logo-blue.original.png', alt: 'Nailab', class: 'h-16 w-auto' %>
      <% end %>
      <h2 class="text-3xl font-bold text-gray-900">Create your account</h2>
      <p class="text-sm text-gray-600">
        Already have an account?
        <%= link_to 'Sign in', login_path, class: 'font-semibold text-teal-600 hover:text-teal-700' %>
      </p>
    </div>
    <%= form_with url: user_registration_path, scope: :user, local: true, class: 'space-y-6 bg-white p-8 rounded-xl shadow-lg' do |f| %>
      <% if flash[:alert].present? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if flash[:notice].present? %>
        <div class="bg-teal-50 border border-teal-200 text-teal-700 px-4 py-3 rounded-lg text-sm">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div class="space-y-4">
        <div>
          <%= f.label :full_name, 'Full Name', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.text_field :full_name, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent', placeholder: 'Jane Doe' %>
        </div>
        <div>
          <%= f.label :email, 'Email address', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">@</span>
            <%= f.email_field :email, class: 'pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent', placeholder: 'you@example.com', required: true %>
          </div>
        </div>
        <div>
          <%= f.label :password, 'Password', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">●●●</span>
            <%= f.password_field :password, class: 'pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent', placeholder: 'Create a strong password', required: true %>
          </div>
        </div>
        <div>
          <%= f.label :password_confirmation, 'Confirm password', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <div class="relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">●●●</span>
            <%= f.password_field :password_confirmation, class: 'pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent', placeholder: 'Confirm your password', required: true %>
          </div>
        </div>
      </div>
      <div>
        <%= f.submit 'Create account', class: 'w-full bg-teal-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-teal-700 transition-colors' %>
      </div>
    <% end %>
  </div>
</div>
