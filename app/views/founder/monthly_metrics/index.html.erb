<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Monthly Metrics</h1>
    <%= link_to 'New Monthly Metric', new_founder_monthly_metric_path, class: "bg-purple-600 text-white font-bold py-2 px-4 rounded-lg" %>
  </div>
  <div class="bg-white rounded-xl shadow-lg">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Period</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">MRR</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">New Customers</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Churned Customers</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Runway (Months)</th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Edit</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @monthly_metrics.each do |metric| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= metric.period.strftime("%B %Y") %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= number_to_currency(metric.mrr) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= metric.new_paying_customers %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= metric.churned_customers %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= number_with_precision(metric.runway_in_months, precision: 1) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to 'Edit', edit_founder_monthly_metric_path(metric), class: "text-nailab-teal hover:text-nailab-teal-dark" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
