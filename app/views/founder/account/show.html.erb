<%# app/views/founder/account/show.html.erb %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-nailab-purple mb-4">Account Settings</h1>
    <p class="text-xl text-gray-600">Manage your account information and preferences</p>
  </div>
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-nailab-purple text-white px-8 py-6 rounded-t-xl">
      <h2 class="text-2xl font-bold text-white">Profile Information</h2>
    </div>
    <div class="p-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="p-6 bg-base-100 rounded-xl">
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-10 h-10 bg-nailab-purple text-white rounded-full flex items-center justify-center">
              <svg aria-hidden="true" class="w-5 h-5 text-nailab-purple" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-base-content">Name</h3>
          </div>
          <p class="text-base-content text-lg"><%= current_user.user_profile&.full_name || current_user.email %></p>
        </div>
        <div class="p-6 bg-base-100 rounded-xl">
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-10 h-10 bg-secondary rounded-full flex items-center justify-center">
              <svg aria-hidden="true" class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-base-content">Email</h3>
          </div>
          <p class="text-base-content text-lg"><%= current_user.email %></p>
        </div>
        <div class="p-6 bg-base-100 rounded-xl">
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-10 h-10 bg-nailab-purple text-white rounded-full flex items-center justify-center">
              <svg aria-hidden="true" class="w-5 h-5 text-nailab-purple" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-base-content">Role</h3>
          </div>
          <p class="text-base-content text-lg"><%= current_user.user_profile&.role || 'Founder' %></p>
        </div>
        <div class="p-6 bg-base-100 rounded-xl">
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-10 h-10 bg-secondary rounded-full flex items-center justify-center">
              <svg aria-hidden="true" class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-base-content">Member Since</h3>
          </div>
          <p class="text-base-content text-lg"><%= current_user.created_at.strftime('%B %d, %Y') %></p>
        </div>
      </div>
      <div class="mt-8 flex justify-center">
        <%= link_to 'Edit Account', edit_founder_account_path, class: "inline-flex items-center px-4 py-2 bg-nailab-purple text-white text-lg font-semibold rounded-md shadow-lg" %>
      </div>
    </div>
  </div>
</div>
</div>