<%# app/views/mentor/startups/index.html.erb %>
<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">My Startups</h1>
    <p class="text-xl text-gray-600">Startups you're mentoring</p>
  </div>
  <div class="bg-white rounded-lg shadow">
    <div class="p-6">
      <% if @startups.any? %>
        <div class="space-y-4">
          <% @startups.each do |startup| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900"><%= startup.company_name %></h3>
                  <p class="text-sm text-gray-600"><%= startup.industry %></p>
                  <p class="text-sm text-gray-600"><%= startup.location %></p>
                  <p class="text-sm text-gray-600">Stage: <%= startup.stage %></p>
                </div>
                <div>
                  <%= link_to 'View Details', mentor_startup_path(startup), class: "inline-block px-3 py-2 bg-nailab-teal text-white rounded-md hover:bg-nailab-teal-dark" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">You haven't been assigned any startups yet.</p>
      <% end %>
    </div>
  </div>
</div>