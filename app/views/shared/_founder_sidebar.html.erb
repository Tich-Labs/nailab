<%# app/views/shared/_founder_sidebar.html.erb %>
<aside class="hidden md:block w-64 h-screen bg-white border-r border-gray-200 fixed top-0 left-0 z-40 shadow-sm">
  <div class="flex flex-col h-full">
    <!-- Logo/Brand -->
    <div class="flex items-center justify-center h-16 px-4 border-b border-gray-200">
      <%= link_to root_path, class: "flex items-center" do %>
        <%= image_tag "/images/nailab-logo-blue.png", alt: "Nailab", class: "h-7 w-auto" %>
      <% end %>
    </div>
    <!-- Navigation -->
    <nav class="flex-1 py-6 px-4 space-y-8 overflow-y-auto">
      <!-- DASHBOARD -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Dashboard</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Home', founder_root_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(founder_root_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- MY STARTUP -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">My Startup</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Startup Profile', founder_startup_profile_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?(founder_startup_profile_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= link_to 'Progress Tracker', founder_progress_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(founder_progress_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- MENTORSHIP -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Mentorship</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Mentorship', founder_mentorship_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(founder_mentorship_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= link_to 'Messages', founder_conversations_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?('/founder/messages') ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- GROWTH -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Growth</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Resource Library', founder_resources_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?(founder_resources_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= link_to 'Opportunities', founder_opportunities_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?(founder_opportunities_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- COMMUNITY -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Community</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Community & Peer Connections', founder_community_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(founder_community_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
        </ul>
      </div>
      <!-- SETTINGS -->
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Settings</h3>
        <ul class="space-y-1">
          <li>
            <%= link_to 'Account Settings', founder_account_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?(founder_account_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= link_to 'Subscription & Billing', current_user.subscription.present? ? founder_subscription_path : new_founder_subscription_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{request.path.start_with?(founder_subscription_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li>
            <%= link_to 'Support', founder_support_path,
                class: "block px-3 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(founder_support_path) ? 'bg-teal-50 text-teal-700' : 'text-gray-700 hover:bg-gray-50'}" %>
          </li>
          <li class="pt-2">
            <%= button_to 'Log Out', destroy_user_session_path, method: :delete,
                class: "w-full text-left px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</aside>