<%# app/views/mentor/profiles/show.html.erb %>
<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">My Profile</h1>
    <p class="text-xl text-gray-600">Manage your mentor profile</p>
  </div>
  <div class="bg-white rounded-lg shadow">
    <div class="p-6">
      <% if @profile %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
            <dl class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Full Name</dt>
                <dd class="text-sm text-gray-900"><%= @profile.full_name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Title</dt>
                <dd class="text-sm text-gray-900"><%= @profile.title %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Organization</dt>
                <dd class="text-sm text-gray-900"><%= @profile.organization %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Years of Experience</dt>
                <dd class="text-sm text-gray-900"><%= @profile.years_experience %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Bio</dt>
                <dd class="text-sm text-gray-900"><%= @profile.bio %></dd>
              </div>
            </dl>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Mentorship Details</h3>
            <dl class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Mentorship Approach</dt>
                <dd class="text-sm text-gray-900"><%= @profile.mentorship_approach %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Motivation</dt>
                <dd class="text-sm text-gray-900"><%= @profile.motivation %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Sectors</dt>
                <dd class="text-sm text-gray-900"><%= @profile.sectors&.join(', ') %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Expertise</dt>
                <dd class="text-sm text-gray-900"><%= @profile.expertise&.join(', ') %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Stage Preference</dt>
                <dd class="text-sm text-gray-900"><%= @profile.stage_preference&.join(', ') %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Preferred Mentorship Mode</dt>
                <dd class="text-sm text-gray-900"><%= @profile.preferred_mentorship_mode %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Availability Hours/Month</dt>
                <dd class="text-sm text-gray-900"><%= @profile.availability_hours_month %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Rate per Hour</dt>
                <dd class="text-sm text-gray-900"><%= @profile.rate_per_hour ? "#{@profile.currency} #{@profile.rate_per_hour}" : 'Pro bono' %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">LinkedIn URL</dt>
                <dd class="text-sm text-gray-900"><%= link_to @profile.linkedin_url, @profile.linkedin_url, target: '_blank' if @profile.linkedin_url %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Professional Website</dt>
                <dd class="text-sm text-gray-900"><%= link_to @profile.professional_website, @profile.professional_website, target: '_blank' if @profile.professional_website %></dd>
              </div>
            </dl>
          </div>
        </div>
        <div class="mt-6">
          <%= link_to 'Edit Profile', edit_mentor_profile_path, class: "inline-block px-4 py-2 bg-nailab-teal text-white rounded-md hover:bg-nailab-teal-dark" %>
        </div>
      <% else %>
        <p class="text-gray-600">No mentor profile found. Please complete your onboarding.</p>
      <% end %>
    </div>
  </div>
</div>