<%# _hero.html.erb - Hero (landing section) %>
<% secondary_cta = @hero_secondary_cta.presence || { 'label' => 'Become a Mentor', 'link' => '/mentor_onboarding' } %>
<% hero_slides = @hero_slides || [] %>
<% hero_slide = hero_slides.first %>
<% hero_title = hero_slide&.title.presence || 'Grow your startup with people whoâ€™ve done it before.' %>
<% hero_subtitle = hero_slide&.subtitle.presence || 'Book weekly 1-on-1 mentorship sessions with seasoned business leaders and build your startup alongside a supportive community of founders actively building high-growth, tech-enabled startups across Africa.' %>
<% hero_cta_text = hero_slide&.cta_text.presence || 'Request Mentorship' %>
<% hero_cta_link = hero_slide&.cta_link.presence || '/founder_onboarding' %>
<% hero_image_url = hero_slide&.image_url.presence || image_path('images-events/Funding_Access.original.jpg') %>

<div class="container mx-auto px-4 h-full flex flex-col justify-center relative z-10">
  <div class="hero-layout flex flex-col md:flex-row items-center gap-12 md:gap-20 py-20">
  <div class="hero-col flex-1 min-w-0 text-nailab-purple">
      <h1 class="font-medium mb-6 text-4xl md:text-5xl">
        <%= hero_title %>
      </h1>
      <p class="text-gray-700 text-lg md:text-xl mb-10 max-w-3xl">
        <%= hero_subtitle %>
      </p>
      <div class="flex flex-row gap-4 items-center">
        <a href="<%= hero_cta_link %>" class="w-48 h-12 rounded-md inline-flex items-center justify-center bg-nailab-purple text-white font-bold hover:opacity-90 hover:shadow-xl transition-all duration-300 transform hover:scale-105 whitespace-nowrap">
          <%= hero_cta_text %>
        </a>
        <a href="<%= secondary_cta['link'] %>" class="w-48 h-12 rounded-md inline-flex items-center justify-center bg-yellow-300 text-nailab-purple font-bold hover:bg-yellow-400 hover:text-white hover:shadow-xl transition-all duration-300 transform hover:scale-105 whitespace-nowrap">
          <%= secondary_cta['label'] %>
        </a>
      </div>
    </div>

    <div class="hero-col flex-1 min-w-0 md:flex md:justify-end relative">
      <div class="relative rounded-2xl overflow-hidden shadow-xl w-full max-w-lg md:max-w-md mx-auto md:mx-0">
        <%= image_tag hero_image_url, alt: hero_title, class: 'w-full h-[300px] md:h-auto object-cover' %>
      </div>
    </div>
  </div>
  <div class="flex flex-row justify-center items-center px-4 mb-8 gap-8 md:gap-20 lg:gap-24 bg-teal-50 rounded-xl py-6">
    <% stats = @connect_stats || PagesController::DEFAULT_CONNECT_STATS %>
    <% stats.each do |s| %>
      <div class="text-center">
        <div class="text-4xl lg:text-5xl font-bold text-gray-700 mb-2"><%= s.is_a?(Hash) ? (s[:value] || s['value']) : s %></div>
        <div class="text-nailab-purple font-bold"><%= s.is_a?(Hash) ? (s[:label] || s['label']) : '' %></div>
      </div>
    <% end %>
  </div>
</div>
