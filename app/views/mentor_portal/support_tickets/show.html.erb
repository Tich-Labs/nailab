<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @support_ticket.subject %></h1>
          <p class="text-gray-600 mt-1">Ticket #<%= @support_ticket.id %> • Created <%= @support_ticket.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
        <div class="flex items-center space-x-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <% case @support_ticket.status %>
            <% when 'open' %>
              bg-green-100 text-green-800
            <% when 'in_progress' %>
              bg-yellow-100 text-yellow-800
            <% when 'resolved' %>
              bg-blue-100 text-blue-800
            <% when 'closed' %>
              bg-gray-100 text-gray-800
            <% end %>">
            <%= @support_ticket.status.humanize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Conversation Thread -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Conversation</h2>
      </div>

      <div class="divide-y divide-gray-200">
        <!-- Original Message -->
        <div class="p-6">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-white font-medium text-sm">
                  <%= @support_ticket.user.name.first.upcase if @support_ticket.user.respond_to?(:name) %>
                </span>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center space-x-2">
                <p class="text-sm font-medium text-gray-900">
                  <%= @support_ticket.user.name if @support_ticket.user.respond_to?(:name) %>
                </p>
                <p class="text-sm text-gray-500">
                  <%= @support_ticket.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <div class="mt-2 text-sm text-gray-700">
                <%= simple_format(@support_ticket.message) %>
              </div>
            </div>
          </div>
        </div>

        <!-- Replies -->
        <% @support_ticket.replies.order(created_at: :asc).each do |reply| %>
          <div class="p-6 <%= reply.admin_reply? ? 'bg-gray-50' : '' %>">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <% if reply.admin_reply? %>
                  <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center">
                    <span class="text-white font-medium text-sm">A</span>
                  </div>
                <% else %>
                  <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                    <span class="text-white font-medium text-sm">
                      <%= reply.user.name.first.upcase if reply.user.respond_to?(:name) %>
                    </span>
                  </div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-2">
                  <p class="text-sm font-medium text-gray-900">
                    <% if reply.admin_reply? %>
                      Admin Support
                    <% else %>
                      <%= reply.user.name if reply.user.respond_to?(:name) %>
                    <% end %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= reply.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </p>
                </div>
                <div class="mt-2 text-sm text-gray-700">
                  <%= simple_format(reply.message) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Reply Form -->
    <% if @support_ticket.status != 'closed' %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Add Reply</h2>
        </div>
        <div class="p-6">
          <%= form_with(model: [@support_ticket, SupportTicketReply.new], url: mentor_support_ticket_reply_path(@support_ticket), method: :post, local: true) do |form| %>
            <div class="mb-4">
              <%= form.label :message, "Your Reply", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_area :message, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Type your reply here..." %>
            </div>
            <div class="flex justify-end">
              <%= form.submit "Send Reply", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
        <div class="text-center">
          <div class="text-gray-500 mb-2">
            <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-1">This ticket is closed</h3>
          <p class="text-gray-500">You cannot add replies to a closed ticket. If you need further assistance, please create a new support ticket.</p>
        </div>
      </div>
    <% end %>

    <!-- Back Link -->
    <div class="mt-6">
      <%= link_to "← Back to Support Tickets", mentor_portal_support_path, class: "text-blue-600 hover:text-blue-500" %>
    </div>
  </div>
</div>