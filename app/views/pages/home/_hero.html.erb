<%# _hero.html.erb - Hero (landing section) %>
<% secondary_cta = @hero_secondary_cta.presence || { 'label' => 'Become a Mentor', 'link' => '/mentor_onboarding' } %>
<% hero_slides = @hero_slides || [] %>
<% hero_slide = hero_slides.first %>
<% hero_title = hero_slide&.title.presence || 'Grow your startup with people whoâ€™ve done it before.' %>
<% hero_subtitle = hero_slide&.subtitle.presence || 'Book weekly 1-on-1 mentorship sessions with seasoned business leaders and build your startup alongside a supportive community of founders actively building high-growth, tech-enabled startups across Africa.' %>
<% hero_cta_text = hero_slide&.cta_text.presence || 'Request Mentorship' %>
<% hero_cta_link = hero_slide&.cta_link.presence || '/founder_onboarding' %>
<% hero_image_url = hero_slide&.image_url.presence || image_path('images-events/Funding_Access.original.jpg') %>


<section class="min-h-[60vh] bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center py-10 lg:py-16">
      <div class="space-y-6">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-base-content max-w-3xl lg:max-w-4xl">
          <%= hero_title %>
        </h1>
        <p class="text-lg md:text-xl text-base-content/70 max-w-3xl leading-relaxed">
          <%= hero_subtitle %>
        </p>
        <div class="flex flex-row flex-wrap gap-4 items-center">
          <a href="<%= hero_cta_link %>" class="btn bg-nailab-purple text-white font-bold px-6 h-12 whitespace-nowrap hover:bg-nailab-purple/90">
            <%= hero_cta_text %>
          </a>
          <a href="<%= secondary_cta['link'] %>" class="btn bg-yellow-300 text-nailab-purple font-bold px-6 h-12 whitespace-nowrap hover:bg-yellow-400">
            <%= secondary_cta['label'] %>
          </a>
        </div>
      </div>

      <div class="relative flex items-center justify-center">
        <div class="card bg-white shadow-xl rounded-2xl overflow-hidden w-full max-w-xl">
          <%= image_tag hero_image_url, alt: hero_title, class: 'w-full h-[350px] md:h-[450px] object-cover' %>
        </div>
        <div class="absolute -bottom-4 -right-4 w-40 h-40 bg-purple-100 rounded-2xl -z-10"></div>
        <div class="absolute -top-4 -left-4 w-40 h-40 bg-teal-100 rounded-2xl -z-10"></div>
      </div>
    </div>
    <div class="flex flex-row flex-wrap justify-center items-center px-4 mb-8 gap-8 md:gap-20 lg:gap-24 bg-base-100 rounded-xl py-6 w-full">
      <% stats = @connect_stats || PagesController::DEFAULT_CONNECT_STATS %>
      <div class="w-full max-w-5xl mx-auto flex justify-between gap-8 flex-wrap items-center">
      <% stats.each do |s| %>
        <div class="w-1/2 sm:w-1/3 lg:w-auto text-center py-3">
          <div class="text-3xl md:text-4xl lg:text-5xl font-bold text-base-content mb-2"><%= s.is_a?(Hash) ? (s[:value] || s['value']) : s %></div>
          <div class="text-primary font-bold text-sm"><%= s.is_a?(Hash) ? (s[:label] || s['label']) : '' %></div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>
