<script>
  document.addEventListener('click', function(e){
    const btn = e.target.closest('button[data-action*="password-visibility#toggle"]');
    if(!btn) return;
    const root = btn.closest('[data-controller="password-visibility"]');
    if(!root) return;
    const fields = root.querySelectorAll('[data-password-visibility-target="field"]');
    fields.forEach(f => {
      try{
        const current = f.getAttribute('type') || f.type || 'password';
        const next = current === 'password' ? 'text' : 'password';
        f.setAttribute('type', next);
        if(f.type !== next) try { f.type = next } catch(_) {}
      }catch(_){/* ignore */}
    });
  });
</script>
