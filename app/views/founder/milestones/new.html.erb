<%# app/views/founder/milestones/new.html.erb %>
<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-teal-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">Add New Milestone</h1>
          <p class="text-lg text-gray-600">Track your startup's key achievements and goals</p>
        </div>
        <%= link_to founder_progress_path, class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-lg shadow-sm border border-gray-300 hover:bg-gray-50 transition-all" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Progress
        <% end %>
      </div>
    </div>
    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-teal-600 px-8 py-6">
        <h2 class="text-2xl font-bold text-white">Milestone Details</h2>
      </div>
      <div class="p-8">
        <%= form_with(model: @milestone, url: founder_milestones_path, method: :post, class: "space-y-8") do |f| %>
          <% if @milestone.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-xl p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @milestone.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Left Column -->
            <div class="space-y-6">
              <div>
                <%= f.label :title, class: 'block text-sm font-semibold text-slate-600' %>
                <%= f.text_field :title, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300', placeholder: "e.g., Launch MVP, Secure first 100 users" %>
              </div>
              <div>
                <%= f.label :description, class: 'block text-sm font-semibold text-slate-600' %>
                <%= f.text_area :description, rows: 4, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300', placeholder: "Describe what this milestone involves and why it's important..." %>
              </div>
              <div>
                <%= f.label :due_date, class: 'block text-sm font-semibold text-slate-600' %>
                <%= f.date_field :due_date, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
              </div>
            </div>
            <!-- Right Column -->
            <div class="space-y-6">
              <div>
                <%= f.label :category, class: 'block text-sm font-semibold text-slate-600' %>
                <%= f.select :category, options_for_select(['Product Development', 'Funding', 'Team Building', 'Marketing', 'Operations', 'Other'], @milestone.category), {}, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
              </div>
              <div>
                <%= f.label :priority, class: 'block text-sm font-semibold text-slate-600' %>
                <%= f.select :priority, options_for_select(['Low', 'Medium', 'High', 'Critical'], @milestone.priority), {}, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300' %>
              </div>
              <div class="flex items-center">
                <%= f.check_box :completed, class: 'h-4 w-4 text-purple-600 focus:ring-purple-500 border-slate-200 rounded' %>
                <%= f.label :completed, class: 'ml-2 block text-sm font-semibold text-slate-600' %>
              </div>
              <div>
                <%= f.label :notes, class: 'block text-sm font-semibold text-slate-600' %>
                <%= f.text_area :notes, rows: 3, class: 'mt-1 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-purple-500 focus:ring-2 focus:ring-purple-300', placeholder: "Any additional notes or context..." %>
              </div>
            </div>
          </div>
          <!-- Action Buttons -->
          <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
            <%= link_to founder_progress_path, class: "inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 text-sm font-semibold rounded-xl hover:bg-gray-200 transition-all" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Cancel
            <% end %>
            <%= f.submit "Create Milestone", class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-teal-600 text-white text-sm font-semibold rounded-xl hover:from-purple-700 hover:to-teal-700 transition-all shadow-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>