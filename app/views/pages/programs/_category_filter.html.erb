<% filter_categories = ['All'] + (@program_categories || []) %>
<section class="py-12 bg-white sticky top-16 z-40 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap gap-3 justify-center">
      <% selected = params[:category].presence || 'All' %>
      <% filter_categories.each do |category| %>
        <%= link_to category,
          category == 'All' ? programs_path : url_for(request.query_parameters.merge(category: category)),
          class: "px-6 py-3 rounded-lg font-semibold transition-all capitalize #{selected == category ? 'bg-nailab-teal text-white shadow-lg focus:outline-none focus:ring-2 focus:ring-nailab-purple/30' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}"
        %>
      <% end %>
    </div>
  </div>
</section>
